# Production Environment Configuration
# SECURITY: Change all default passwords and secrets!

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=inventory_db
DB_USER=postgres
# CRITICAL: Change this password!
DB_PASSWORD=postgres123

# Session Configuration
# CRITICAL: Generate a strong, unique session secret!
# Use: openssl rand -base64 64
SESSION_SECRET=kHxflgGgweEOunsg5RCVlmgch25vBQSx5zSj94SkfzfPnI3yAFcGedkTdMnhLZY6

# Application Configuration
NODE_ENV=production
PORT=3000

# Redis Configuration
REDIS_URL=redis://redis:6379

# Security Configuration
TRUST_PROXY=true
SECURE_COOKIES=true
CORS_ORIGIN=https://yourdomain.com

# Optional: Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-specific-password

# Optional: File Upload Settings
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Optional: Backup Settings
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *

# Optional: Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Optional: SSL/TLS Configuration
SSL_CERT_PATH=/etc/ssl/certs/cert.pem
SSL_KEY_PATH=/etc/ssl/certs/key.pem

# Optional: Monitoring
HEALTH_CHECK_INTERVAL=30000
LOG_LEVEL=info
LOG_FORMAT=json

# Optional: Clustering
CLUSTER_WORKERS=0
