{
  "name": "inventory-manager",
  "version": "1.0.0",
  "description": "Web-based inventory management system",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "build:css": "npx tailwindcss -i ./src/input.css -o ./public/css/tailwind.css --minify",
    "init-db": "node database/init-db.js",
    "add-settings": "node database/add-settings-column.js",
    "gen-pwd": "node tools/generate-password.js",
    "reset-admin": "node tools/reset-admin.js",
    "migrate": "node database/migrations/add-missing-columns.js",
    "repair-db": "node database/repair-database.js",
    "deploy": "./deploy.sh",
    "docker:build": "docker build -t it-asset-manager .",
    "docker:run": "docker run -p 3000:3000 it-asset-manager",
    "docker:compose": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "health": "curl -f http://localhost:3000/health || exit 1",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:start:prod": "pm2 start ecosystem.config.js --env production",
    "pm2:stop": "pm2 stop it-asset-manager",
    "pm2:restart": "pm2 restart it-asset-manager",
    "pm2:reload": "pm2 reload it-asset-manager",
    "pm2:delete": "pm2 delete it-asset-manager",
    "pm2:logs": "pm2 logs it-asset-manager",
    "pm2:monit": "pm2 monit",
    "pm2:status": "pm2 status",
    "pm2:startup": "pm2 startup",
    "pm2:save": "pm2 save",
    "setup:full": "npm run init-db && npm run pm2:start",
    "setup:prod": "npm run init-db && npm run pm2:start:prod"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "connect-flash": "^0.1.1",
    "connect-redis": "^9.0.0",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "i18n": "^0.15.1",
    "method-override": "^3.0.0",
    "multer": "^2.0.2",
    "node-cron": "^4.2.1",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "pm2": "^6.0.8",
    "puppeteer": "^24.15.0",
    "redis": "^5.8.1"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Drkpulse/inv_manager.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Drkpulse/inv_manager/issues"
  },
  "homepage": "https://github.com/Drkpulse/inv_manager#readme"
}
