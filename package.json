{
  "name": "inventory-manager",
  "version": "1.0.0",
  "description": "Web-based inventory management system",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "build:css": "tailwindcss -i ./src/input.css -o ./public/css/styles.css --watch",
    "init-db": "node database/init-db.js",
    "add-settings": "node database/add-settings-column.js",
    "gen-pwd": "node tools/generate-password.js",
    "reset-admin": "node tools/reset-admin.js",
    "migrate": "node database/migrations/add-missing-columns.js",
    "repair-db": "node database/repair-database.js",
    "deploy": "./deploy.sh",
    "docker:build": "docker build -t it-asset-manager .",
    "docker:run": "docker run -p 3000:3000 it-asset-manager",
    "docker:compose": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "health": "curl -f http://localhost:3000/health || exit 1"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "connect-flash": "^0.1.1",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "i18n": "^0.15.1",
    "method-override": "^3.0.0",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "tailwindcss": "^3.3.3"
  }
}
