{
  "name": "it-asset-manager",
  "version": "1.0.0",
  "description": "Enterprise IT Asset Management System",
  "main": "src/app.js",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "start": "node src/app.js",
    "start:cluster": "node src/cluster.js",
    "dev": "nodemon src/app.js",
    "build": "npm run build:css && npm run build:assets",
    "build:css": "mkdir -p public/css && npx tailwindcss -i ./src/input.css -o ./public/css/tailwind.css --minify",
    "build:assets": "echo 'Assets built successfully'",
    "build:dev": "mkdir -p public/css && npx tailwindcss -i ./src/input.css -o ./public/css/tailwind.css --watch",
    "init-db": "node database/init-db.js",
    "migrate": "node database/run-migrations.js",
    "migrate:status": "node database/run-migrations.js status",
    "migrate:departments": "node database/add-department-description.js",
    "fix-db": "node database/fix-missing-columns.js",
    "test-db": "node database/test-columns.js",
    "repair-db": "node database/repair-database.js",
    "fix-license": "node tools/fix-license-database.js",
    "license-status": "node tools/fix-license-database.js status",
    "test-license": "node tools/test-license-system.js",
    "gen-pwd": "node tools/generate-password.js",
    "reset-admin": "node database/reset-admin.js",
    "health": "curl -f http://localhost:3000/health || exit 1",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix",
    "outdated": "npm outdated",
    "update-deps": "npx npm-check-updates -u",
    "update-deps:check": "npx npm-check-updates",
    "update-deps:safe": "npx npm-check-updates -u --target minor",
    "update-deps:patch": "npx npm-check-updates -u --target patch",
    "docker:build": "docker build -t it-asset-manager .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f app",
    "backup": "node tools/backup.js",
    "restore": "node tools/restore.js",
    "prebuild": "mkdir -p public/css logs uploads data"
  },
  "devDependencies": {
    "@types/node": "^20.12.12",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "npm-check-updates": "^16.14.20",
    "postcss": "^8.4.38",
    "supertest": "^7.0.0",
    "tailwindcss": "^3.4.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Drkpulse/inv_manager.git"
  },
  "keywords": [
    "inventory",
    "asset-management",
    "enterprise",
    "docker",
    "nodejs",
    "postgresql",
    "redis",
    "production"
  ],
  "author": "Your Name",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Drkpulse/inv_manager/issues"
  },
  "homepage": "https://github.com/Drkpulse/inv_manager#readme",
  "dependencies": {
    "axios": "^1.12.2",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "compression": "^1.8.1",
    "connect-flash": "^0.1.1",
    "connect-redis": "^9.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "ejs": "^3.1.10",
    "express": "^4.21.2",
    "express-rate-limit": "^8.0.1",
    "express-session": "^1.18.2",
    "express-validator": "^7.2.1",
    "glob": "^11.0.3",
    "helmet": "^8.1.0",
    "hpp": "^0.2.3",
    "i18n": "^0.15.1",
    "isomorphic-dompurify": "^2.28.0",
    "method-override": "^3.0.0",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "node-cron": "^4.2.1",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "puppeteer": "^24.17.0",
    "redis": "^5.8.2",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  }
}
