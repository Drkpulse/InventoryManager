<script>
document.addEventListener('DOMContentLoaded', function() {
  loadDashboardData();
});

async function loadDashboardData() {
  try {
    // Load recent notifications
    const notificationsResponse = await fetch('/notifications?limit=5');
    if (notificationsResponse.ok) {
      const notificationsData = await notificationsResponse.json();
      displayRecentNotifications(notificationsData.notifications || []);

      // Update active notifications count
      const activeCount = notificationsData.notifications?.filter(n => !n.is_read).length || 0;
      document.getElementById('activeNotifications').textContent = activeCount;
    }

    // Load warranty information
    await loadWarrantyInfo();
  } catch (error) {
    console.error('Error loading dashboard data:', error);
  }
}

function displayRecentNotifications(notifications) {
  const container = document.getElementById('recentNotifications');

  if (notifications.length === 0) {
    container.innerHTML = `
      <div class="text-center text-gray-500 dark:text-gray-400 py-8">
        <i class="fas fa-bell-slash text-2xl mb-2"></i>
        <p>No recent notifications</p>
      </div>
    `;
    return;
  }

  container.innerHTML = notifications.map(notification => `
    <div class="flex items-start gap-3 p-3 rounded-lg ${notification.is_read ? 'bg-gray-50 dark:bg-gray-900' : 'bg-blue-50 dark:bg-blue-900/30 border-l-2 border-blue-500'}">
      <i class="${notification.icon || 'fas fa-bell'} text-${notification.is_read ? 'gray-400' : 'blue-500'} mt-1"></i>
      <div class="flex-1 min-w-0">
        <p class="text-sm font-medium text-gray-800 dark:text-gray-100 truncate">${notification.title}</p>
        <p class="text-xs text-gray-500 dark:text-gray-400">${timeAgo(new Date(notification.created_at))}</p>
      </div>
    </div>
  `).join('');
}

async function loadWarrantyInfo() {
  try {
    const response = await fetch('/api/warranties/summary');
    if (response.ok) {
      const data = await response.json();
      document.getElementById('expiringWarranties').textContent = data.expiring || 0;
      document.getElementById('expiredWarranties').textContent = data.expired || 0;

      displayWarrantyAlerts(data.alerts || []);
    }
  } catch (error) {
    console.error('Error loading warranty info:', error);
    document.getElementById('expiringWarranties').textContent = '0';
    document.getElementById('expiredWarranties').textContent = '0';

    document.getElementById('warrantyAlerts').innerHTML = `
      <div class="text-center text-red-500 dark:text-red-400 py-8">
        <i class="fas fa-exclamation-triangle text-2xl mb-2"></i>
        <p>Error loading warranty data</p>
      </div>
    `;
  }
}

function displayWarrantyAlerts(alerts) {
  const container = document.getElementById('warrantyAlerts');

  if (alerts.length === 0) {
    container.innerHTML = `
      <div class="text-center text-green-500 dark:text-green-400 py-8">
        <i class="fas fa-shield-alt text-2xl mb-2"></i>
        <p>All warranties are up to date</p>
      </div>
    `;
    return;
  }

  container.innerHTML = alerts.slice(0, 5).map(alert => {
    const isExpired = alert.days_until_expiry < 0;
    const colorClass = isExpired ? 'text-red-600 dark:text-red-400' : 'text-yellow-600 dark:text-yellow-400';
    const bgClass = isExpired ? 'bg-red-50 dark:bg-red-900/30 border-l-2 border-red-500' : 'bg-yellow-50 dark:bg-yellow-900/30 border-l-2 border-yellow-500';

    return `
      <div class="flex items-start gap-3 p-3 rounded-lg ${bgClass}">
        <i class="fas fa-${isExpired ? 'exclamation-circle' : 'exclamation-triangle'} ${colorClass} mt-1"></i>
        <div class="flex-1 min-w-0">
          <p class="text-sm font-medium text-gray-800 dark:text-gray-100">
            <a href="/items/${alert.item_id}/${alert.cep_brc}" class="hover:underline">${alert.name}</a>
          </p>
          <p class="text-xs ${colorClass}">
            ${isExpired ? `Expired ${Math.abs(alert.days_until_expiry)} days ago` : `Expires in ${alert.days_until_expiry} days`}
          </p>
        </div>
      </div>
    `;
  }).join('');
}

async function checkWarranties() {
  const button = event.target;
  const originalText = button.innerHTML;

  button.disabled = true;
  button.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i> Checking...';

  try {
    const response = await fetch('/notifications/check-warranties', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json'
      }
    });

    const data = await response.json();

    if (data.success) {
      showStatusModal('success', 'Warranty Check Complete', data.message);
      // Reload warranty info
      await loadWarrantyInfo();
    } else {
      showStatusModal('error', 'Warranty Check Failed', data.error || 'An error occurred during the warranty check.');
    }
  } catch (error) {
    console.error('Error checking warranties:', error);
    showStatusModal('error', 'Warranty Check Failed', 'Failed to communicate with the server.');
  } finally {
    button.disabled = false;
    button.innerHTML = originalText;
  }
}

function showStatusModal(type, title, message) {
  const modal = document.getElementById('statusModal');
  const icon = document.getElementById('statusIcon');
  const titleEl = document.getElementById('statusTitle');
  const messageEl = document.getElementById('statusMessage');

  if (type === 'success') {
    icon.className = 'fas fa-check-circle text-green-600 dark:text-green-400 text-2xl';
  } else {
    icon.className = 'fas fa-exclamation-circle text-red-600 dark:text-red-400 text-2xl';
  }

  titleEl.textContent = title;
  messageEl.textContent = message;
  modal.classList.remove('hidden');
}

function closeStatusModal() {
  document.getElementById('statusModal').classList.add('hidden');
}

function timeAgo(date) {
  const now = new Date();
  const diffInSeconds = Math.floor((now - date) / 1000);

  if (diffInSeconds < 60) return 'Just now';
  if (diffInSeconds < 3600) return `${Math.floor(diffInSeconds / 60)}m ago`;
  if (diffInSeconds < 86400) return `${Math.floor(diffInSeconds / 3600)}h ago`;
  return `${Math.floor(diffInSeconds / 86400)}d ago`;
}

