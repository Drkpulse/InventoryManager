<!-- Security Center Dashboard -->
<div class="security-center-container">
  <!-- Page Header -->
  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="text-3xl font-bold text-gray-900 dark:text-white">
        <i class="fas fa-shield-alt text-blue-600 mr-2"></i>Security Center
      </h1>
      <p class="text-gray-600 dark:text-gray-300 mt-2">
        Monitor security events, manage account lockouts, and oversee application security
      </p>
    </div>
    <div class="flex space-x-3">
      <button onclick="refreshSecurityData()" class="btn btn-outline">
        <i class="fas fa-sync-alt mr-2"></i>Refresh
      </button>
      <a href="/admin/security/logs" class="btn btn-primary">
        <i class="fas fa-list-alt mr-2"></i>View All Logs
      </a>
    </div>
  </div>

  <!-- Security Status Cards -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    <!-- Failed Login Attempts -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6 border-l-4 border-red-500">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-gray-600 dark:text-gray-400">Failed Logins (24h)</p>
          <p class="text-3xl font-bold text-red-600"><%= securitySummary.failedAttempts.total %></p>
          <p class="text-xs text-gray-500 mt-1">
            <%= securitySummary.failedAttempts.uniqueIdentifiers %> unique identifiers
          </p>
        </div>
        <div class="p-3 bg-red-100 dark:bg-red-900 rounded-full">
          <i class="fas fa-exclamation-triangle text-red-600 dark:text-red-300 text-xl"></i>
        </div>
      </div>
      <% if (securitySummary.failedAttempts.lastAttempt) { %>
        <div class="mt-4 text-xs text-gray-500">
          Last attempt: <%= new Date(securitySummary.failedAttempts.lastAttempt).toLocaleString() %>
        </div>
      <% } %>
    </div>

    <!-- Locked Accounts -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6 border-l-4 border-yellow-500">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-gray-600 dark:text-gray-400">Locked Accounts</p>
          <p class="text-3xl font-bold text-yellow-600"><%= securitySummary.lockedAccounts.total %></p>
          <% if (securitySummary.lockedAccounts.total > 0) { %>
            <a href="/admin/security/lockouts" class="text-xs text-blue-500 hover:underline">
              Manage lockouts →
            </a>
          <% } else { %>
            <p class="text-xs text-gray-500 mt-1">No accounts locked</p>
          <% } %>
        </div>
        <div class="p-3 bg-yellow-100 dark:bg-yellow-900 rounded-full">
          <i class="fas fa-lock text-yellow-600 dark:text-yellow-300 text-xl"></i>
        </div>
      </div>
    </div>

    <!-- Active Sessions -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6 border-l-4 border-green-500">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-gray-600 dark:text-gray-400">Active Sessions</p>
          <p class="text-3xl font-bold text-green-600"><%= securitySummary.sessions.total %></p>
          <p class="text-xs text-gray-500 mt-1">
            <%= securitySummary.sessions.uniqueUsers %> unique users
          </p>
        </div>
        <div class="p-3 bg-green-100 dark:bg-green-900 rounded-full">
          <i class="fas fa-users text-green-600 dark:text-green-300 text-xl"></i>
        </div>
      </div>
      <div class="mt-4">
        <a href="/admin/security/sessions" class="text-xs text-blue-500 hover:underline">
          View sessions →
        </a>
      </div>
    </div>

    <!-- Security Score -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6 border-l-4 border-blue-500">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-gray-600 dark:text-gray-400">Security Score</p>
          <%
            const suspiciousUsers = securitySummary.suspiciousActivity.users_with_failures || 0;
            const lockedUsers = securitySummary.suspiciousActivity.locked_users || 0;
            const score = Math.max(0, 100 - (suspiciousUsers * 5) - (lockedUsers * 10) - (securitySummary.failedAttempts.total * 2));
            const scoreColor = score >= 80 ? 'text-green-600' : score >= 60 ? 'text-yellow-600' : 'text-red-600';
          %>
          <p class="text-3xl font-bold <%= scoreColor %>"><%= Math.round(score) %>/100</p>
          <p class="text-xs text-gray-500 mt-1">System security health</p>
        </div>
        <div class="p-3 bg-blue-100 dark:bg-blue-900 rounded-full">
          <i class="fas fa-chart-line text-blue-600 dark:text-blue-300 text-xl"></i>
        </div>
      </div>
    </div>
  </div>

  <!-- Security Events Summary -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
    <!-- Recent Security Events -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
      <div class="flex items-center justify-between mb-4">
        <h2 class="text-xl font-semibold text-gray-900 dark:text-white">
          <i class="fas fa-bell text-orange-500 mr-2"></i>Recent Events (24h)
        </h2>
        <a href="/admin/security/logs" class="text-blue-500 hover:underline text-sm">View All</a>
      </div>

      <% if (securitySummary.events.length > 0) { %>
        <div class="space-y-3">
          <% securitySummary.events.slice(0, 5).forEach(event => { %>
            <div class="flex items-center justify-between p-3 bg-gray-50 dark:bg-gray-700 rounded-lg">
              <div class="flex items-center space-x-3">
                <%
                  const severityColors = {
                    'low': 'text-green-600 bg-green-100 dark:bg-green-900',
                    'medium': 'text-yellow-600 bg-yellow-100 dark:bg-yellow-900',
                    'high': 'text-orange-600 bg-orange-100 dark:bg-orange-900',
                    'critical': 'text-red-600 bg-red-100 dark:bg-red-900'
                  };
                  const color = severityColors[event.severity] || 'text-gray-600 bg-gray-100 dark:bg-gray-700';
                %>
                <span class="px-2 py-1 rounded-full text-xs font-medium <%= color %>">
                  <%= event.severity.toUpperCase() %>
                </span>
                <div>
                  <p class="text-sm font-medium text-gray-900 dark:text-white">
                    <%= event.event_type.replace(/_/g, ' ').replace(/\b\w/g, l => l.toUpperCase()) %>
                  </p>
                </div>
              </div>
              <span class="text-lg font-bold text-gray-600 dark:text-gray-300">
                <%= event.count %>
              </span>
            </div>
          <% }) %>
        </div>
      <% } else { %>
        <div class="text-center py-8 text-gray-500 dark:text-gray-400">
          <i class="fas fa-check-circle text-green-500 text-3xl mb-2"></i>
          <p>No security events in the last 24 hours</p>
        </div>
      <% } %>
    </div>

    <!-- Suspicious Activity -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
      <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">
        <i class="fas fa-eye text-red-500 mr-2"></i>Suspicious Activity
      </h2>

      <div class="space-y-4">
        <div class="flex justify-between items-center p-3 bg-gray-50 dark:bg-gray-700 rounded-lg">
          <span class="text-sm text-gray-600 dark:text-gray-300">Users with Failed Attempts</span>
          <span class="font-bold text-red-600"><%= securitySummary.suspiciousActivity.users_with_failures || 0 %></span>
        </div>

        <div class="flex justify-between items-center p-3 bg-gray-50 dark:bg-gray-700 rounded-lg">
          <span class="text-sm text-gray-600 dark:text-gray-300">Currently Locked Users</span>
          <span class="font-bold text-yellow-600"><%= securitySummary.suspiciousActivity.locked_users || 0 %></span>
        </div>

        <div class="flex justify-between items-center p-3 bg-gray-50 dark:bg-gray-700 rounded-lg">
          <span class="text-sm text-gray-600 dark:text-gray-300">Inactive Users (30+ days)</span>
          <span class="font-bold text-gray-600 dark:text-gray-300"><%= securitySummary.suspiciousActivity.inactive_users || 0 %></span>
        </div>
      </div>

      <div class="mt-6 space-y-2">
        <a href="/admin/security/lockouts" class="block w-full text-center bg-yellow-600 hover:bg-yellow-700 text-white py-2 px-4 rounded-lg text-sm transition-colors">
          <i class="fas fa-unlock mr-2"></i>Manage Lockouts
        </a>
        <a href="/admin/security/sessions" class="block w-full text-center bg-blue-600 hover:bg-blue-700 text-white py-2 px-4 rounded-lg text-sm transition-colors">
          <i class="fas fa-users mr-2"></i>View Sessions
        </a>
      </div>
    </div>
  </div>

  <!-- Quick Actions -->
  <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
    <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">
      <i class="fas fa-bolt text-yellow-500 mr-2"></i>Quick Actions
    </h2>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
      <button onclick="exportSecurityReport()" class="flex items-center justify-center p-4 bg-blue-50 dark:bg-blue-900 hover:bg-blue-100 dark:hover:bg-blue-800 rounded-lg transition-colors">
        <i class="fas fa-download text-blue-600 dark:text-blue-300 mr-2"></i>
        <span class="text-sm font-medium text-blue-700 dark:text-blue-200">Export Report</span>
      </button>

      <button onclick="clearOldLogs()" class="flex items-center justify-center p-4 bg-green-50 dark:bg-green-900 hover:bg-green-100 dark:hover:bg-green-800 rounded-lg transition-colors">
        <i class="fas fa-broom text-green-600 dark:text-green-300 mr-2"></i>
        <span class="text-sm font-medium text-green-700 dark:text-green-200">Clear Old Logs</span>
      </button>

      <button onclick="runSecurityScan()" class="flex items-center justify-center p-4 bg-purple-50 dark:bg-purple-900 hover:bg-purple-100 dark:hover:bg-purple-800 rounded-lg transition-colors">
        <i class="fas fa-search text-purple-600 dark:text-purple-300 mr-2"></i>
        <span class="text-sm font-medium text-purple-700 dark:text-purple-200">Security Scan</span>
      </button>

      <a href="/admin/security/logs" class="flex items-center justify-center p-4 bg-gray-50 dark:bg-gray-700 hover:bg-gray-100 dark:hover:bg-gray-600 rounded-lg transition-colors">
        <i class="fas fa-cog text-gray-600 dark:text-gray-300 mr-2"></i>
        <span class="text-sm font-medium text-gray-700 dark:text-gray-200">Settings</span>
      </a>
    </div>
  </div>
</div>

<!-- Security Center JavaScript -->
<script>
function refreshSecurityData() {
  window.location.reload();
}

function exportSecurityReport() {
  // Create a form to submit for report generation
  const form = document.createElement('form');
  form.method = 'POST';
  form.action = '/admin/security/export-report';

  // Add CSRF token
  const csrfInput = document.createElement('input');
  csrfInput.type = 'hidden';
  csrfInput.name = '_csrf';
  csrfInput.value = '<%= typeof csrfToken !== "undefined" ? csrfToken : "" %>';
  form.appendChild(csrfInput);

  document.body.appendChild(form);
  form.submit();
  document.body.removeChild(form);

  // Show loading toast
  showToast('Generating security report...', 'info');
}

function clearOldLogs() {
  if (confirm('Are you sure you want to clear security logs older than 90 days? This action cannot be undone.')) {
    fetch('/admin/security/clear-old-logs', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
        'X-Requested-With': 'XMLHttpRequest'
      },
      body: JSON.stringify({
        _csrf: '<%= typeof csrfToken !== "undefined" ? csrfToken : "" %>'
      })
    })
    .then(response => response.json())
    .then(data => {
      if (data.success) {
        showToast(data.message || 'Old logs cleared successfully', 'success');
        setTimeout(() => window.location.reload(), 2000);
      } else {
        showToast(data.error || 'Failed to clear old logs', 'error');
      }
    })
    .catch(error => {
      console.error('Error:', error);
      showToast('An error occurred while clearing old logs', 'error');
    });
  }
}

function runSecurityScan() {
  if (confirm('Run a security scan? This may take a few minutes and will check for potential vulnerabilities.')) {
    showToast('Starting security scan...', 'info');

    fetch('/admin/security/scan', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
        'X-Requested-With': 'XMLHttpRequest'
      },
      body: JSON.stringify({
        _csrf: '<%= typeof csrfToken !== "undefined" ? csrfToken : "" %>'
      })
    })
    .then(response => response.json())
    .then(data => {
      if (data.success) {
        showToast('Security scan completed successfully', 'success');
        setTimeout(() => window.location.reload(), 2000);
      } else {
        showToast(data.error || 'Security scan failed', 'error');
      }
    })
    .catch(error => {
      console.error('Error:', error);
      showToast('An error occurred during the security scan', 'error');
    });
  }
}

// Auto-refresh every 5 minutes
setInterval(() => {
  refreshSecurityData();
}, 5 * 60 * 1000);
</script>

