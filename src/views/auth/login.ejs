<div class="modern-login">
  <div class="login-background">
    <div class="bg-shapes">
      <div class="shape-server"></div>
      <div class="shape-circuit"></div>
      <div class="shape-chip"></div>
      <div class="shape-network"></div>
    </div>
  </div>

  <div class="login-container">
    <div class="login-card animated-card">
      <div class="login-header">
        <div class="logo-container">
          <div class="logo-icon animated-icon">
            <i class="fas fa-server"></i>
          </div>
          <div class="logo-text">
            <h1>AssetTrack</h1>
            <p>IT Asset Management</p>
          </div>
        </div>
      </div>

      <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-danger modern-alert">
          <i class="fas fa-exclamation-triangle"></i>
          <span><%= error %></span>
        </div>
      <% } %>

      <form id="loginForm" method="POST" action="/auth/login" data-no-ajax class="modern-form">
        <div class="form-group">
          <div class="input-container">
            <i class="fas fa-envelope input-icon"></i>
            <input type="email" id="email" name="email" class="form-input"
                   value="<%= locals.email || '' %>" required autofocus
                   placeholder="Email address">
            <div class="input-underline"></div>
          </div>
        </div>
        <div class="form-group">
          <div class="input-container">
            <i class="fas fa-lock input-icon"></i>
            <input type="password" id="password" name="password" class="form-input"
                   required placeholder="Password">
            <button type="button" class="password-toggle" onclick="togglePassword()">
              <i class="fas fa-eye" id="passwordToggleIcon"></i>
            </button>
            <div class="input-underline"></div>
          </div>
        </div>
        <div class="form-actions">
          <button type="submit" class="btn-login animated-btn">
            <span class="btn-text">Sign In</span>
            <div class="btn-loader" style="display: none;">
              <div class="spinner"></div>
            </div>
          </button>
        </div>
      </form>

      <div class="login-footer">
        <div class="footer-links">
          <a href="#" class="link-forgot">Forgot Password?</a>
        </div>
        <div class="footer-info">
          <p class="version">
            <i class="fas fa-shield-alt"></i>
            Secure Login â€¢ v2.0.0
          </p>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
/* Modern Login Styles */
.modern-login {
  min-height: 100vh;
  background: linear-gradient(120deg, #1a1a2e 0%, #0f3460 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
  margin: 0;
  padding: 0;
}

.login-background {
  position: absolute;
  top: 0; left: 0; right: 0; bottom: 0;
  z-index: 1;
  pointer-events: none;
}

.bg-shapes {
  position: absolute;
  width: 100%; height: 100%;
}

.shape-server, .shape-circuit, .shape-chip, .shape-network {
  opacity: 0.7;
  filter: blur(2px);
}

.shape-server {
  position: absolute;
  width: 60px; height: 80px;
  background: rgba(0,255,127,0.15);
  border: 2px solid rgba(0,255,127,0.25);
  border-radius: 12px;
  top: 18%; left: 12%;
  animation: pulseServer 3s cubic-bezier(.4,0,.2,1) infinite;
}

.shape-circuit {
  position: absolute;
  width: 90px; height: 90px;
  border: 2px solid rgba(0,191,255,0.18);
  border-radius: 50%;
  top: 65%; right: 10%;
  animation: rotateCircuit 7s linear infinite;
}

.shape-chip {
  position: absolute;
  width: 36px; height: 36px;
  background: rgba(255,215,0,0.12);
  border: 2px solid rgba(255,215,0,0.22);
  border-radius: 6px;
  bottom: 28%; left: 18%;
  animation: blinkChip 2.5s ease-in-out infinite;
}

.shape-network {
  position: absolute;
  width: 70px; height: 2px;
  background: rgba(255,105,180,0.18);
  top: 22%; right: 22%;
  animation: dataFlow 1.7s ease-in-out infinite;
}

@keyframes pulseServer {
  0%,100% { transform: scale(1); box-shadow: 0 0 0 0 rgba(0,255,127,0.3);}
  50% { transform: scale(1.07); box-shadow: 0 0 0 14px rgba(0,255,127,0);}
}
@keyframes rotateCircuit {
  0% { transform: rotate(0deg);}
  100% { transform: rotate(360deg);}
}
@keyframes blinkChip {
  0%,100% { opacity: 0.3;}
  50% { opacity: 0.8;}
}
@keyframes dataFlow {
  0%,100% { opacity: 0.2;}
  50% { opacity: 0.7;}
}

.login-container {
  position: relative;
  z-index: 2;
  display: flex;
  max-width: 410px;
  width: 100%;
  background: rgba(255,255,255,0.97);
  box-shadow: 0 12px 40px rgba(0,0,0,0.18);
  border-radius: 18px;
  overflow: hidden;
  animation: fadeInUp 0.7s cubic-bezier(.4,0,.2,1);
}

@keyframes fadeInUp {
  from { opacity: 0; transform: translateY(40px);}
  to { opacity: 1; transform: translateY(0);}
}

.login-card {
  padding: 2.5rem 2rem;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  animation: fadeInScale 0.8s cubic-bezier(.4,0,.2,1);
}

@keyframes fadeInScale {
  from { opacity: 0; transform: scale(0.95);}
  to { opacity: 1; transform: scale(1);}
}

.login-header {
  margin-bottom: 2rem;
  text-align: center;
}

.logo-container {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 1rem;
  animation: bounceLogo 1.2s cubic-bezier(.4,0,.2,1);
}

@keyframes bounceLogo {
  0%,100% { transform: translateY(0);}
  50% { transform: translateY(-12px);}
}

.logo-icon {
  width: 54px; height: 54px;
  background: linear-gradient(135deg, #1a1a2e, #0f3460);
  border-radius: 13px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 1.5rem;
  color: #00ff7f;
  box-shadow: 0 6px 18px rgba(26,26,46,0.22);
  animation: pulseServer 2.5s cubic-bezier(.4,0,.2,1) infinite;
}

.logo-text h1 {
  margin: 0;
  font-size: 1.7rem;
  font-weight: 700;
  color: #333;
  background: linear-gradient(135deg, #1a1a2e, #0f3460);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  letter-spacing: 0.02em;
}

.logo-text p {
  margin: 0.25rem 0 0 0;
  color: #666;
  font-size: 0.95rem;
  font-weight: 500;
}

.modern-alert {
  background: linear-gradient(135deg, #fee, #fdd);
  border: 1px solid #f8d7da;
  border-radius: 12px;
  padding: 0.75rem 1.2rem;
  margin-bottom: 1.2rem;
  display: flex;
  align-items: center;
  gap: 0.7rem;
  color: #721c24;
  animation: slideInDown 0.5s cubic-bezier(.4,0,.2,1);
}

@keyframes slideInDown {
  from { opacity: 0; transform: translateY(-18px);}
  to { opacity: 1; transform: translateY(0);}
}

.modern-form {
  display: flex;
  flex-direction: column;
  gap: 1.2rem;
}

.form-group {
  position: relative;
}

.input-container {
  position: relative;
}

.form-input {
  width: 100%;
  padding: 1rem 1rem 1rem 2.7rem;
  border: 2px solid #f0f0f0;
  border-radius: 11px;
  font-size: 1rem;
  background: white;
  transition: all 0.3s cubic-bezier(.4,0,.2,1);
  outline: none;
  box-sizing: border-box;
}

.form-input:focus {
  border-color: #1a1a2e;
  box-shadow: 0 0 0 3px rgba(26,26,46,0.09);
  transform: translateY(-1px);
}

.input-icon {
  position: absolute;
  left: 1rem;
  top: 50%;
  transform: translateY(-50%);
  color: #999;
  font-size: 1rem;
  transition: color 0.3s cubic-bezier(.4,0,.2,1);
}

.form-input:focus + .input-icon {
  color: #1a1a2e;
}

.password-toggle {
  position: absolute;
  right: 1rem;
  top: 50%;
  transform: translateY(-50%);
  background: none;
  border: none;
  color: #999;
  cursor: pointer;
  padding: 0.5rem;
  border-radius: 6px;
  transition: all 0.3s cubic-bezier(.4,0,.2,1);
}

.password-toggle:hover {
  color: #1a1a2e;
  background: rgba(26,26,46,0.08);
}

.input-underline {
  position: absolute;
  bottom: 0; left: 0;
  height: 2px; width: 0;
  background: linear-gradient(135deg, #1a1a2e, #0f3460);
  transition: width 0.3s cubic-bezier(.4,0,.2,1);
}

.form-input:focus ~ .input-underline {
  width: 100%;
}

.btn-login {
  width: 100%;
  padding: 1rem 2rem;
  background: linear-gradient(135deg, #1a1a2e, #0f3460);
  color: white;
  border: none;
  border-radius: 12px;
  font-size: 1rem;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s cubic-bezier(.4,0,.2,1);
  position: relative;
  overflow: hidden;
  margin-top: 0.5rem;
  box-shadow: 0 4px 18px rgba(26,26,46,0.13);
  animation: fadeInUp 0.7s cubic-bezier(.4,0,.2,1);
}

.btn-login:hover {
  transform: translateY(-2px) scale(1.03);
  box-shadow: 0 8px 25px rgba(26,26,46,0.22);
}

.btn-login:active {
  transform: translateY(0) scale(1);
}

.btn-login:disabled {
  opacity: 0.7;
  cursor: not-allowed;
  transform: none;
}

.btn-loader {
  position: absolute;
  top: 50%; left: 50%;
  transform: translate(-50%, -50%);
}

.spinner {
  width: 20px; height: 20px;
  border: 2px solid rgba(255,255,255,0.3);
  border-top: 2px solid #1a1a2e;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg);}
  100% { transform: rotate(360deg);}
}

.login-footer {
  margin-top: 2rem;
  text-align: center;
}

.footer-links {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 1rem;
  margin-bottom: 1.2rem;
}

.footer-links a {
  color: #1a1a2e;
  text-decoration: none;
  font-weight: 500;
  transition: color 0.3s cubic-bezier(.4,0,.2,1);
}

.footer-links a:hover {
  color: #0f3460;
  text-decoration: underline;
}

.version {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
  font-weight: 500;
  color: #1a1a2e !important;
  font-size: 0.9rem;
}

.animated-card {
  animation: fadeInSlide 0.7s cubic-bezier(.4,0,.2,1);
  box-shadow: 0 12px 40px rgba(0,0,0,0.18), 0 0 0 0 rgba(26,26,46,0.08);
  transition: box-shadow 0.3s;
}
.animated-card:hover {
  box-shadow: 0 20px 60px rgba(26,26,46,0.18), 0 0 0 8px rgba(26,26,46,0.08);
}

@keyframes fadeInSlide {
  from { opacity: 0; transform: translateY(30px) scale(0.98);}
  to { opacity: 1; transform: translateY(0) scale(1);}
}

.animated-icon {
  animation: bounceIcon 1.2s infinite;
}

@keyframes bounceIcon {
  0%,100% { transform: translateY(0);}
  50% { transform: translateY(-8px);}
}

.animated-btn {
  animation: fadeInUp 1s cubic-bezier(.4,0,.2,1);
}

.animated-btn:active {
  animation: btnPress 0.2s;
}

@keyframes btnPress {
  0% { transform: scale(1);}
  50% { transform: scale(0.97);}
  100% { transform: scale(1);}
}

@media (max-width: 600px) {
  .login-container {
    max-width: 100vw;
    border-radius: 0;
    box-shadow: none;
  }
  .login-card {
    padding: 1.2rem;
  }
}
</style>

<script>
function togglePassword() {
  const passwordInput = document.getElementById('password');
  const toggleIcon = document.getElementById('passwordToggleIcon');
  if (passwordInput.type === 'password') {
    passwordInput.type = 'text';
    toggleIcon.className = 'fas fa-eye-slash';
  } else {
    passwordInput.type = 'password';
    toggleIcon.className = 'fas fa-eye';
  }
}

document.getElementById('loginForm').addEventListener('submit', function(e) {
  const submitBtn = document.querySelector('.btn-login');
  const btnText = document.querySelector('.btn-text');
  const btnLoader = document.querySelector('.btn-loader');
  submitBtn.disabled = true;
  btnText.style.display = 'none';
  btnLoader.style.display = 'block';
  setTimeout(() => {
    submitBtn.disabled = false;
    btnText.style.display = 'block';
    btnLoader.style.display = 'none';
  }, 5000);
});

// Animate background shapes with staggered delays
document.addEventListener('DOMContentLoaded', function() {
  const shapes = document.querySelectorAll('.bg-shapes > div');
  shapes.forEach((shape, idx) => {
    shape.style.animationDelay = `${idx * 0.4}s`;
  });
});
</script>
