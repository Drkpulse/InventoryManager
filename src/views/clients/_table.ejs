<!-- Clients Table -->
<div class="bg-white dark:bg-gray-800 rounded-lg shadow border border-gray-200 dark:border-gray-700 overflow-hidden">
  <!-- Table Header -->
  <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-gray-900">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
      <div class="flex items-center gap-2">
        <i class="fas fa-building text-blue-600 dark:text-blue-400"></i>
        <h3 class="text-lg font-semibold text-gray-800 dark:text-gray-100">
          Clients
          <% if (pagination && pagination.totalRecords !== undefined) { %>
            <span class="text-sm font-normal text-gray-500 dark:text-gray-400">
              (<%= pagination.totalRecords %> total)
            </span>
          <% } %>
        </h3>
      </div>
      <div class="flex items-center gap-3">
        <label for="clientsPerPage" class="text-sm font-medium text-gray-700 dark:text-gray-300">Per page:</label>
        <select id="clientsPerPage" class="px-3 py-1 text-sm border border-gray-300 dark:border-gray-700 rounded-md bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100">
          <option value="10" <%= currentFilters && currentFilters.perPage == 10 ? 'selected' : '' %>>10</option>
          <option value="20" <%= !currentFilters || currentFilters.perPage == 20 ? 'selected' : '' %>>20</option>
          <option value="50" <%= currentFilters && currentFilters.perPage == 50 ? 'selected' : '' %>>50</option>
          <option value="100" <%= currentFilters && currentFilters.perPage == 100 ? 'selected' : '' %>>100</option>
        </select>
      </div>
    </div>
  </div>

  <!-- Table Content -->
  <% if (clients && clients.length > 0) { %>
    <div class="overflow-x-auto">
      <table class="w-full">
        <thead class="bg-gray-50 dark:bg-gray-900 border-b border-gray-200 dark:border-gray-700">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
              Client Information
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
              Assets
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
              Description
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
              Actions
            </th>
          </tr>
        </thead>
        <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
          <% clients.forEach((client, index) => { %>
            <tr class="hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors duration-200">
              <!-- Client Information -->
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="flex items-center">
                  <div class="w-10 h-10 bg-blue-100 dark:bg-blue-900 rounded-full flex items-center justify-center">
                    <i class="fas fa-building text-blue-600 dark:text-blue-300"></i>
                  </div>
                  <div class="ml-4">
                    <div class="text-sm font-medium text-gray-900 dark:text-gray-100">
                      <%= client.name %>
                    </div>
                    <div class="text-sm text-gray-500 dark:text-gray-400">
                      #<%= client.pnumber %>
                    </div>
                  </div>
                </div>
              </td>

              <!-- Assets -->
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="flex flex-col gap-1">
                  <div class="flex items-center gap-4 text-sm">
                    <% if (client.printer_count > 0) { %>
                      <span class="flex items-center gap-1 text-gray-700 dark:text-gray-300">
                        <i class="fas fa-print text-blue-500"></i>
                        <%= client.printer_count %> printer<%= client.printer_count !== 1 ? 's' : '' %>
                      </span>
                    <% } else { %>
                      <span class="flex items-center gap-1 text-gray-500 dark:text-gray-400">
                        <i class="fas fa-print text-gray-400"></i>
                        No printers
                      </span>
                    <% } %>
                  </div>
                  <div class="text-xs text-gray-500 dark:text-gray-400">
                    Total: <%= client.printer_count || 0 %> printer asset<%= (client.printer_count || 0) !== 1 ? 's' : '' %>
                  </div>
                </div>
              </td>

              <!-- Description -->
              <td class="px-6 py-4">
                <% if (client.description) { %>
                  <div class="text-sm text-gray-900 dark:text-gray-100 max-w-xs truncate">
                    <%= client.description %>
                  </div>
                <% } else { %>
                  <span class="text-sm text-gray-500 dark:text-gray-400 italic">No description</span>
                <% } %>
              </td>

              <!-- Actions -->
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                <div class="flex items-center space-x-3">
                  <!-- View Button -->
                  <a href="/clients/<%= client.id %>" class="inline-flex items-center px-3 py-1 text-xs font-medium rounded-md text-blue-700 dark:text-blue-300 bg-blue-100 dark:bg-blue-900 hover:bg-blue-200 dark:hover:bg-blue-800 transition-colors duration-200">
                    <i class="fas fa-eye mr-1"></i> View
                  </a>

                  <!-- Edit Button -->
                  <a href="/clients/<%= client.id %>/edit" class="inline-flex items-center px-3 py-1 text-xs font-medium rounded-md text-yellow-700 dark:text-yellow-300 bg-yellow-100 dark:bg-yellow-900 hover:bg-yellow-200 dark:hover:bg-yellow-800 transition-colors duration-200">
                    <i class="fas fa-edit mr-1"></i> Edit
                  </a>

                  <!-- Delete Button -->
                  <button type="button" class="delete-client-btn inline-flex items-center px-3 py-1 text-xs font-medium rounded-md text-red-700 dark:text-red-300 bg-red-100 dark:bg-red-900 hover:bg-red-200 dark:hover:bg-red-800 transition-colors duration-200"
                          data-client-id="<%= client.id %>"
                          data-client-name="<%= client.name %>"
                          data-client-pnumber="<%= client.pnumber %>">
                    <i class="fas fa-trash mr-1"></i> Delete
                  </button>
                </div>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>

    <!-- Pagination -->
    <% if (pagination && pagination.total > 1) { %>
      <div class="px-6 py-4 border-t border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-gray-900">
        <div class="flex items-center justify-between">
          <div class="text-sm text-gray-700 dark:text-gray-300">
            Showing <%= ((pagination.current - 1) * pagination.perPage) + 1 %> to <%= Math.min(pagination.current * pagination.perPage, pagination.totalRecords) %> of <%= pagination.totalRecords %> results
          </div>
          <div class="flex items-center space-x-2">
            <!-- Previous Page -->
            <% if (pagination.hasPrev) { %>
              <a href="?<%= new URLSearchParams({...currentFilters, page: pagination.current - 1}).toString() %>" class="px-3 py-2 text-sm font-medium text-gray-500 dark:text-gray-400 bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-700 rounded-md hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors duration-200">
                <i class="fas fa-chevron-left"></i> Previous
              </a>
            <% } else { %>
              <span class="px-3 py-2 text-sm font-medium text-gray-300 dark:text-gray-600 bg-gray-100 dark:bg-gray-900 border border-gray-200 dark:border-gray-800 rounded-md cursor-not-allowed">
                <i class="fas fa-chevron-left"></i> Previous
              </span>
            <% } %>

            <!-- Page Numbers -->
            <%
              const startPage = Math.max(1, pagination.current - 2);
              const endPage = Math.min(pagination.total, pagination.current + 2);
            %>
            <% for (let i = startPage; i <= endPage; i++) { %>
              <% if (i === pagination.current) { %>
                <span class="px-3 py-2 text-sm font-medium text-white bg-blue-600 border border-blue-600 rounded-md">
                  <%= i %>
                </span>
              <% } else { %>
                <a href="?<%= new URLSearchParams({...currentFilters, page: i}).toString() %>" class="px-3 py-2 text-sm font-medium text-gray-500 dark:text-gray-400 bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-700 rounded-md hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors duration-200">
                  <%= i %>
                </a>
              <% } %>
            <% } %>

            <!-- Next Page -->
            <% if (pagination.hasNext) { %>
              <a href="?<%= new URLSearchParams({...currentFilters, page: pagination.current + 1}).toString() %>" class="px-3 py-2 text-sm font-medium text-gray-500 dark:text-gray-400 bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-700 rounded-md hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors duration-200">
                Next <i class="fas fa-chevron-right"></i>
              </a>
            <% } else { %>
              <span class="px-3 py-2 text-sm font-medium text-gray-300 dark:text-gray-600 bg-gray-100 dark:bg-gray-900 border border-gray-200 dark:border-gray-800 rounded-md cursor-not-allowed">
                Next <i class="fas fa-chevron-right"></i>
              </span>
            <% } %>
          </div>
        </div>
      </div>
    <% } %>

  <% } else { %>
    <!-- Empty State -->
    <div class="text-center py-12">
      <div class="w-16 h-16 mx-auto mb-4 bg-gray-100 dark:bg-gray-700 rounded-full flex items-center justify-center">
        <i class="fas fa-building text-2xl text-gray-400 dark:text-gray-500"></i>
      </div>
      <h3 class="text-lg font-medium text-gray-900 dark:text-gray-100 mb-2">No clients found</h3>
      <p class="text-gray-500 dark:text-gray-400 mb-6">
        <% if (currentFilters && currentFilters.search) { %>
          No clients match your current search criteria.
        <% } else { %>
          Get started by adding your first client.
        <% } %>
      </p>
      <div class="flex flex-col sm:flex-row gap-3 justify-center">
        <a href="/clients/new" class="inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 rounded-md transition-colors duration-200">
          <i class="fas fa-plus mr-2"></i> Add New Client
        </a>
        <% if (currentFilters && currentFilters.search) { %>
          <a href="/clients" class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-700 rounded-md transition-colors duration-200">
            <i class="fas fa-times mr-2"></i> Clear Search
          </a>
        <% } %>
      </div>
    </div>
  <% } %>
</div>
