    background-color: white;
    border-radius: 8px;
    padding: 1.5rem;
    box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    text-align: center;
  }

  .stat-number {
    font-size: 2rem;
    font-weight: bold;
    color: var(--primary);
    margin: 0.5rem 0;
  }

  .stat-label {
    color: #666;
    margin-bottom: 1rem;
  }

  .card-link {
    display: inline-block;
    font-size: 0.9rem;
  }

  .dashboard-row {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: 1.5rem;
    margin-bottom: 2rem;
  }

  .dashboard-panel {
    background-color: white;
    border-radius: 8px;
    padding: 1.5rem;
    box-shadow: 0 2px 5px rgba(0,0,0,0.1);
  }

  .dashboard-panel h2 {
    margin-bottom: 1rem;
    color: var(--dark);
    font-size: 1.2rem;
    border-bottom: 1px solid #eee;
    padding-bottom: 0.5rem;
  }

  .data-table {
    width: 100%;
    font-size: 0.9rem;
  }

  .data-table th {
    text-align: left;
