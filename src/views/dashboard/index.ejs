<section class="dashboard">
  <h1>Dashboard</h1>

  <div class="stats-cards">
    <div class="stat-card">
      <h3>Items</h3>
      <p class="stat-number"><%= stats.itemCount %></p>
      <p class="stat-label">Total Items</p>
      <a href="/items" class="card-link">View All</a>
    </div>

    <div class="stat-card">
      <h3>Employees</h3>
      <p class="stat-number"><%= stats.employeeCount %></p>
      <p class="stat-label">Active Employees</p>
      <a href="/employees" class="card-link">View All</a>
    </div>

    <div class="stat-card">
      <h3>Departments</h3>
      <p class="stat-number"><%= stats.departmentCount %></p>
      <p class="stat-label">Departments</p>
      <a href="/departments" class="card-link">View All</a>
    </div>

    <div class="stat-card">
      <h3>Unassigned</h3>
      <p class="stat-number"><%= stats.unassignedCount %></p>
      <p class="stat-label">Unassigned Items</p>
      <a href="/reports/unassigned-assets" class="card-link">View Report</a>
    </div>
  </div>

  <div class="dashboard-row">
    <div class="dashboard-panel">
      <h2>Asset Distribution</h2>
      <div class="chart-container">
        <table class="data-table">
          <thead>
            <tr>
              <th>Item Type</th>
              <th>Count</th>
            </tr>
          </thead>
          <tbody>
            <% itemsByType.forEach(type => { %>
              <tr>
                <td><%= type.name %></td>
                <td><%= type.count %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>

    <div class="dashboard-panel">
      <h2>Recent Items</h2>
      <table class="data-table">
        <thead>
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Type</th>
            <th>Assigned To</th>
          </tr>
        </thead>
        <tbody>
          <% recentItems.forEach(item => { %>
            <tr>
              <td><%= item.cep_brc %></td>
              <td>
                <a href="/items/<%= item.id %>/<%= item.cep_brc %>"><%= item.name %></a>
              </td>
              <td><%= item.type_name || 'N/A' %></td>
              <td><%= item.assigned_to_name || 'Unassigned' %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
      <a href="/items" class="view-all">View All Items â†’</a>
    </div>
  </div>

  <div class="action-buttons">
    <a href="/items/new" class="btn">Add New Item</a>
    <a href="/employees/new" class="btn">Add New Employee</a>
    <a href="/reports/export-assets" class="btn">Export Inventory</a>
  </div>
</section>

