<h1>Add New Department</h1>

<% if (typeof error !== 'undefined') { %>
  <div class="alert alert-danger"><%= error %></div>
<% } %>

<form method="POST" action="/departments" data-no-ajax>
  <div class="form-group">
    <label for="name">Department Name</label>
    <input type="text" id="name" name="name" value="<%= typeof name !== 'undefined' ? name : '' %>" required>
  </div>

  <div class="form-group">
    <button type="submit" class="btn">Add Department</button>
    <a href="/departments" class="btn"><%= t("common.cancel") %></a>
  </div>
</form>
