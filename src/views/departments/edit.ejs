<h1>Edit Department</h1>

<form method="POST" action="/departments/<%= department.id %>" data-no-ajax>
  <div class="form-group">
    <label for="name">Department Name</label>
    <input type="text" id="name" name="name" value="<%= department.name %>" required>
  </div>

  <div class="form-group">
    <button type="submit" class="btn">Update Department</button>
    <a href="/departments/<%= department.id %>" class="btn"><%= t("common.cancel") %></a>
  </div>
</form>
