<h1>Departments</h1>

<div class="actions" style="margin-bottom: 1rem;">
  <a href="/departments/new" class="btn">Add New Department</a>
</div>

<% if (departments && departments.length > 0) { %>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Employees</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% departments.forEach(department => { %>
        <tr>
          <td><%= department.name %></td>
          <td><%= department.employee_count %></td>
          <td>
            <a href="/departments/<%= department.id %>" class="btn">View</a>
            <a href="/departments/<%= department.id %>/edit" class="btn">Edit</a>
            <form style="display: inline;" method="POST" action="/departments/<%= department.id %>/delete">
              <button type="submit" class="btn btn-danger delete-btn">Delete</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
<% } else { %>
  <p>No departments found.</p>
<% } %>
