<div class="page-container">
  <div class="page-header-simple">
    <div class="header-title-section">
      <div class="breadcrumb-nav">
        <a href="/references" class="breadcrumb-link">
          <i class="fas fa-cog"></i> References
        </a>
        <i class="fas fa-chevron-right breadcrumb-separator"></i>
        <span class="breadcrumb-current">Departments</span>
      </div>
      <h1>Departments</h1>
      <div class="departments-meta">
        <span class="departments-count">
          <i class="fas fa-building"></i>
          <%= departments ? departments.length : 0 %> departments
        </span>
      </div>
    </div>
    <div class="header-actions">
      <div class="action-buttons">
        <a href="/references" class="btn btn-secondary">
          <i class="fas fa-arrow-left"></i> Back to References
        </a>
        <a href="/departments/new" class="btn btn-primary">
          <i class="fas fa-plus"></i> Add New Department
        </a>
      </div>
    </div>
  </div>

  <div class="content-section">
    <% if (departments && departments.length > 0) { %>
      <div class="table-container">
        <table class="data-table">
          <thead>
            <tr>
              <th class="department-name-col">
                <i class="fas fa-building"></i> Name
              </th>
              <th class="description-col">
                <i class="fas fa-info-circle"></i> Description
              </th>
              <th class="employees-col">
                <i class="fas fa-users"></i> Employees
              </th>
              <th class="location-col">
                <i class="fas fa-map-marker-alt"></i> Location
              </th>
              <th class="actions-col">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% departments.forEach(department => { %>
              <tr class="table-row">
                <td class="department-name-cell">
                  <div class="department-info">
                    <div class="department-name">
                      <strong><%= department.name %></strong>
                    </div>
                    <% if (department.code) { %>
                      <div class="department-code">
                        Code: <%= department.code %>
                      </div>
                    <% } %>
                  </div>
                </td>
                <td class="description-cell">
                  <% if (department.description) { %>
                    <span class="description-text"><%= department.description %></span>
                  <% } else { %>
                    <span class="text-muted">No description</span>
                  <% } %>
                </td>
                <td class="employees-cell">
                  <div class="employees-info">
                    <% if (parseInt(department.employee_count) > 0) { %>
                      <span class="employees-badge active">
                        <i class="fas fa-users"></i>
                        <%= department.employee_count %> employees
                      </span>
                    <% } else { %>
                      <span class="employees-badge empty">
                        <i class="fas fa-user-slash"></i>
                        No employees
                      </span>
                    <% } %>
                  </div>
                </td>
                <td class="location-cell">
                  <% if (department.location_name) { %>
                    <span class="location-badge">
                      <i class="fas fa-map-pin"></i>
                      <%= department.location_name %>
                    </span>
                  <% } else { %>
                    <span class="text-muted">No location</span>
                  <% } %>
                </td>
                <td class="actions-cell">
                  <div class="action-buttons-inline">
                    <a href="/departments/<%= department.id %>"
                       class="btn-action btn-view"
                       title="View Department">
                      <i class="fas fa-eye"></i>
                    </a>
                    <a href="/departments/<%= department.id %>/edit"
                       class="btn-action btn-edit"
                       title="Edit Department">
                      <i class="fas fa-edit"></i>
                    </a>
                    <% if (parseInt(department.employee_count) === 0) { %>
                      <form method="POST" action="/departments/<%= department.id %>/delete"
                            class="inline-form"
                            onsubmit="return confirmDelete('<%= department.name %>');">
                        <button type="submit" class="btn-action btn-delete" title="Delete Department">
                          <i class="fas fa-trash"></i>
                        </button>
                      </form>
                    <% } else { %>
                      <button class="btn-action btn-delete" disabled
                              title="Cannot delete: this department has <%= department.employee_count %> employees">
                        <i class="fas fa-trash"></i>
                      </button>
                    <% } %>
                  </div>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>

      <!-- Results Summary -->
      <div class="results-summary-bottom">
        <div class="results-stats">
          <span class="results-count">
            <i class="fas fa-building"></i>
            Showing <strong><%= departments.length %></strong> departments
          </span>
          <div class="stats-display">
            <%
              const departmentsWithEmployees = departments.filter(d => parseInt(d.employee_count) > 0).length;
              const emptyDepartments = departments.length - departmentsWithEmployees;
              const totalEmployees = departments.reduce((sum, d) => sum + parseInt(d.employee_count || 0), 0);
            %>
            <div class="stat-item">
              <span class="stat-number"><%= departmentsWithEmployees %></span>
              <span class="stat-label">With Employees</span>
            </div>
            <div class="stat-item">
              <span class="stat-number"><%= totalEmployees %></span>
              <span class="stat-label">Total Employees</span>
            </div>
            <% if (emptyDepartments > 0) { %>
              <div class="stat-item">
                <span class="stat-number"><%= emptyDepartments %></span>
                <span class="stat-label">Empty</span>
              </div>
            <% } %>
          </div>
        </div>
      </div>

    <% } else { %>
      <div class="empty-state">
        <div class="empty-icon">
          <i class="fas fa-building"></i>
        </div>
        <h3>No Departments Found</h3>
        <p>Departments help organize employees by their functional areas. Start by adding your first department.</p>
        <div class="empty-actions">
          <a href="/departments/new" class="btn btn-primary">
            <i class="fas fa-plus"></i> Add First Department
          </a>
          <a href="/references" class="btn btn-secondary">
            <i class="fas fa-cog"></i> Manage References
          </a>
        </div>
      </div>
    <% } %>
  </div>
</div>

<script>
function confirmDelete(departmentName) {
  return confirm(`Are you sure you want to delete the department "${departmentName}"? This action cannot be undone.`);
}
</script>

<style>
