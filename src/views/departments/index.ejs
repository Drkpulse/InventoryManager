  .header-actions .action-buttons {
    flex-direction: column;
    gap: 0.5rem;
  }

  .header-actions .btn {
    width: 100%;
    justify-content: center;
  }

  .action-buttons-inline {
    justify-content: center;
  }
}

/* Print Styles */
@media print {
  .header-actions,
  .action-buttons-inline {
    display: none !important;
  }

  .data-table {
    border: 1px solid #333 !important;
  }

  .data-table th,
  .data-table td {
    border: 1px solid #333 !important;
  }

  .page-container {
    background: white !important;
  }
}
</style>
