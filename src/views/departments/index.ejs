.employees-badge.active {
  background: #d4edda;
  color: #155724;
  border: 1px solid #c3e6cb;
}

.employees-badge.empty {
  background: #f8f9fa;
  color: #6c757d;
  border: 1px solid #e9ecef;
}

.employees-badge i {
  font-size: 0.8rem;
}

/* Location Badge */
.location-badge {
