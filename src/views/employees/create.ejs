  margin: 0;
  width: auto;
}

.software-info {
  flex: 1;
}

.software-info strong {
  display: block;
  margin-bottom: 0.25rem;
}

.version {
  background: #e9ecef;
  padding: 0.125rem 0.375rem;
  border-radius: 3px;
  font-size: 0.75rem;
  margin-left: 0.5rem;
}

.software-details {
  font-size: 0.8rem;
  color: #666;
  display: flex;
  gap: 1rem;
  margin-top: 0.25rem;
}

