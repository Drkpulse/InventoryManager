<h1>Employees</h1>

<div class="actions" style="margin-bottom: 1rem;">
  <a href="/employees/new" class="btn">Add New Employee</a>
</div>

<% if (employees && employees.length > 0) { %>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>ID</th>
        <th>Email</th>
        <th>Department</th>
        <th>Platform</th>
        <th>Office</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% employees.forEach(employee => { %>
        <tr>
          <td><%= employee.name %></td>
          <td><%= employee.cep %></td>
          <td><%= employee.email %></td>
          <td><%= employee.department_name || 'N/A' %></td>
          <td><%= employee.platform_name || 'N/A' %></td>
          <td><%= employee.office_name || 'N/A' %></td>
          <td>
            <a href="/employees/<%= employee.id %>" class="btn">View</a>
            <a href="/employees/<%= employee.id %>/edit" class="btn">Edit</a>
            <form style="display: inline;" method="POST" action="/employees/<%= employee.id %>/delete">
              <button type="submit" class="btn btn-danger delete-btn">Delete</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
<% } else { %>
  <p>No employees found.</p>
<% } %>
