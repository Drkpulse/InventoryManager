<section class="min-h-screen bg-gray-50 dark:bg-gray-900 flex items-center justify-center p-8 text-gray-900 dark:text-white">
  <div class="max-w-xl w-full mx-auto text-center bg-white dark:bg-gray-800 rounded-2xl shadow-2xl p-8 md:p-12 animate-fadeIn">
    <div class="mx-auto mb-6 text-5xl text-red-500 dark:text-yellow-400 animate-bounce">
      <i class="fas fa-exclamation-triangle"></i>
    </div>
    <h1 class="text-6xl font-extrabold text-indigo-600 dark:text-indigo-400 mb-2"><%= locals.status || '500' %></h1>
    <h2 class="text-2xl md:text-3xl font-bold text-gray-900 dark:text-white mb-4">
      <%= locals.title || 'Oops! Something went wrong' %>
    </h2>
    <div class="mb-8">
      <p class="text-base md:text-lg text-gray-500 dark:text-gray-300">
        <%= locals.error || locals.message || 'An unexpected error occurred. Please try again later.' %>
      </p>
    </div>
    <div class="flex flex-wrap gap-3 justify-center">
      <a href="/" class="inline-flex items-center gap-2 px-6 py-2 rounded-lg bg-indigo-600 hover:bg-indigo-700 text-white font-semibold shadow transition">
        <i class="fas fa-home"></i> Go to Dashboard
      </a>
      <button onclick="history.back()" class="inline-flex items-center gap-2 px-6 py-2 rounded-lg bg-gray-200 dark:bg-gray-700 hover:bg-gray-300 dark:hover:bg-gray-600 text-gray-900 dark:text-white font-semibold shadow transition">
        <i class="fas fa-arrow-left"></i> Go Back
      </button>
      <button onclick="window.location.reload()" class="inline-flex items-center gap-2 px-6 py-2 rounded-lg bg-yellow-400 hover:bg-yellow-500 text-gray-900 font-semibold shadow transition">
        <i class="fas fa-redo"></i> Refresh Page
      </button>
    </div>
  </div>
</section>
