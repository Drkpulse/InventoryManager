<h1>Inventory Items</h1>

<div class="actions" style="margin-bottom: 1rem;">
  <a href="/items/new" class="btn">Add New Item</a>
  <a href="/items/new-receipt" class="btn">Add New Purchase Receipt</a>
</div>

<% if (items && items.length > 0) { %>
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Type</th>
        <th>Brand</th>
        <th>Assigned To</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% items.forEach(item => { %>
        <tr>
          <td><%= item.cep_brc %></td>
          <td><%= item.name %></td>
          <td><%= item.type_name || 'N/A' %></td>
          <td><%= item.brand_name || 'N/A' %></td>
          <td><%= item.assigned_to_name || 'Unassigned' %></td>
          <td>
            <a href="/items/<%= item.id %>/<%= item.cep_brc %>" class="btn">View</a>
            <a href="/items/<%= item.id %>/<%= item.cep_brc %>/edit" class="btn">Edit</a>
            <form style="display: inline;" method="POST" action="/items/<%= item.id %>/<%= item.cep_brc %>/delete">
              <button type="submit" class="btn btn-danger delete-btn">Delete</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
<% } else { %>
  <p>No items found in the inventory.</p>
<% } %>
