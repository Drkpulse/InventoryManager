<aside class="w-72 min-h-screen bg-white dark:bg-gray-900 border-r border-gray-200 dark:border-gray-800 flex flex-col transition-all duration-200">
  <div class="flex items-center justify-between px-6 py-5 border-b border-gray-100 dark:border-gray-800">
    <div class="flex items-center gap-3 text-indigo-900 dark:text-indigo-300 text-xl font-bold">
      <i class="fas fa-laptop-code"></i>
      <span>IT Asset Manager</span>
    </div>
    <button id="sidebarToggle" class="text-gray-400 hover:text-indigo-700 dark:hover:text-indigo-300 transition">
      <i class="fas fa-chevron-left"></i>
    </button>
  </div>

  <nav class="flex-1 overflow-y-auto px-2 py-4">
    <div class="text-xs font-semibold text-gray-400 dark:text-gray-500 uppercase px-2 mb-2">Main Menu</div>
    <a href="/" class="flex items-center gap-3 px-4 py-2 rounded-lg text-gray-900 dark:text-white hover:bg-indigo-50 dark:hover:bg-gray-800 transition font-medium">
      <i class="fas fa-tachometer-alt"></i>
      <span>Dashboard</span>
    </a>

    <% if (can('items.view')) { %>
    <a href="/items" class="flex items-center gap-3 px-4 py-2 rounded-lg text-gray-900 dark:text-white hover:bg-indigo-50 dark:hover:bg-gray-800 transition font-medium">
      <i class="fas fa-laptop"></i>
      <span>Assets</span>
    </a>
    <% } %>

    <% if (can('employees.view')) { %>
    <a href="/employees" class="flex items-center gap-3 px-4 py-2 rounded-lg text-gray-900 dark:text-white hover:bg-indigo-50 dark:hover:bg-gray-800 transition font-medium">
      <i class="fas fa-users"></i>
      <span>Employees</span>
    </a>
    <% } %>

    <% if (can('software.view')) { %>
    <a href="/software" class="flex items-center gap-3 px-4 py-2 rounded-lg text-gray-900 dark:text-white hover:bg-indigo-50 dark:hover:bg-gray-800 transition font-medium">
      <i class="fas fa-laptop-code"></i>
      <span>Software</span>
    </a>
    <% } %>

    <% if (can('clients.view')) { %>
    <a href="/clients" class="flex items-center gap-3 px-4 py-2 rounded-lg text-gray-900 dark:text-white hover:bg-indigo-50 dark:hover:bg-gray-800 transition font-medium">
      <i class="fas fa-building"></i>
      <span>Clients</span>
    </a>
    <% } %>

    <% if (can('printers.view')) { %>
    <a href="/printers" class="flex items-center gap-3 px-4 py-2 rounded-lg text-gray-900 dark:text-white hover:bg-indigo-50 dark:hover:bg-gray-800 transition font-medium">
      <i class="fas fa-print"></i>
      <span>Printers</span>
    </a>
    <% } %>

    <!-- Mobile Devices Dropdown -->
        <% if (can('pdas.view')) { %>
        <a href="/pdas" class="flex items-center gap-3 px-4 py-2 rounded-lg text-gray-900 dark:text-white hover:bg-indigo-50 dark:hover:bg-gray-800 transition font-medium">
          <i class="fas fa-mobile-alt"></i>
          <span>PDAs</span>
        </a>
        <% } %>

        <% if (can('sim_cards.view')) { %>
        <a href="/simcards" class="flex items-center gap-3 px-4 py-2 rounded-lg text-gray-900 dark:text-white hover:bg-indigo-50 dark:hover:bg-gray-800 transition font-medium">
          <i class="fas fa-sim-card"></i>
          <span>SIM Cards</span>
        </a>
        <% } %>

    <!-- Reports Section -->
    <% if (can('reports.view')) { %>
    <div class="text-xs font-semibold text-gray-400 dark:text-gray-500 uppercase px-2 mb-2 mt-4">Reports</div>
    <a href="/reports/assets" class="flex items-center gap-3 px-4 py-2 rounded-lg text-gray-900 dark:text-white hover:bg-indigo-50 dark:hover:bg-gray-800 transition font-medium">
      <i class="fas fa-chart-bar"></i>
      <span>Asset Reports</span>
    </a>
    <a href="/reports/purchase-history" class="flex items-center gap-3 px-4 py-2 rounded-lg text-gray-900 dark:text-white hover:bg-indigo-50 dark:hover:bg-gray-800 transition font-medium">
      <i class="fas fa-receipt"></i>
      <span>Purchase History</span>
    </a>
    <a href="/reports/assets-by-employee" class="flex items-center gap-3 px-4 py-2 rounded-lg text-gray-900 dark:text-white hover:bg-indigo-50 dark:hover:bg-gray-800 transition font-medium">
      <i class="fas fa-user-tag"></i>
      <span>Assets by Employee</span>
    </a>
    <% } %>

    <!-- Administration Section -->
    <% if (can('admin.settings')) { %>
    <div class="text-xs font-semibold text-gray-400 dark:text-gray-500 uppercase px-2 mb-2 mt-4">
      Administration
      <% if (hasRole('developer')) { %>
        <i class="fas fa-code text-purple-400 ml-1" title="Developer Access"></i>
      <% } %>
    </div>

    <% if (can('users.view')) { %>
    <a href="/admin/users" class="flex items-center gap-3 px-4 py-2 rounded-lg text-gray-900 dark:text-white hover:bg-indigo-50 dark:hover:bg-gray-800 transition font-medium">
      <i class="fas fa-users-cog"></i>
      <span>User Management</span>
      <% if (can('users.create')) { %>
        <i class="fas fa-plus text-green-400 text-xs ml-auto" title="Can create users"></i>
      <% } %>
    </a>
    <% } %>

    <% if (can('roles.view')) { %>
    <a href="/admin/roles" class="flex items-center gap-3 px-4 py-2 rounded-lg text-gray-900 dark:text-white hover:bg-indigo-50 dark:hover:bg-gray-800 transition font-medium">
      <i class="fas fa-user-shield"></i>
      <span>Role Management</span>
      <% if (can('roles.create')) { %>
        <i class="fas fa-plus text-green-400 text-xs ml-auto" title="Can create roles"></i>
      <% } %>
    </a>
    <% } %>

    <% if (canAny(['roles.view', 'roles.edit'])) { %>
    <a href="/admin/permissions" class="flex items-center gap-3 px-4 py-2 rounded-lg text-gray-900 dark:text-white hover:bg-indigo-50 dark:hover:bg-gray-800 transition font-medium">
      <i class="fas fa-key"></i>
      <span>Permissions</span>
      <span class="text-xs bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200 px-2 py-0.5 rounded ml-auto">View</span>
    </a>
    <% } %>

    <% if (can('admin.settings')) { %>
    <a href="/admin/settings" class="flex items-center gap-3 px-4 py-2 rounded-lg text-gray-900 dark:text-white hover:bg-indigo-50 dark:hover:bg-gray-800 transition font-medium">
      <i class="fas fa-cogs"></i>
      <span>System Settings</span>
    </a>
    <% } %>

    <% if (can('admin.logs')) { %>
    <a href="/admin/logs" class="flex items-center gap-3 px-4 py-2 rounded-lg text-gray-900 dark:text-white hover:bg-indigo-50 dark:hover:bg-gray-800 transition font-medium">
      <i class="fas fa-list-alt"></i>
      <span>Activity Logs</span>
    </a>
    <% } %>

    <% if (can('admin.notifications')) { %>
    <a href="/notifications/broadcast" class="flex items-center gap-3 px-4 py-2 rounded-lg text-gray-900 dark:text-white hover:bg-indigo-50 dark:hover:bg-gray-800 transition font-medium">
      <i class="fas fa-bullhorn"></i>
      <span>Send Notification</span>
    </a>
    <% } %>
    <% } %>

    <% if (can('references.view')) { %>
    <!-- Reference Data Section -->
    <div class="text-xs font-semibold text-gray-400 dark:text-gray-500 uppercase px-2 mb-2 mt-4">Reference Data</div>
    <a href="/references/asset-types" class="flex items-center gap-3 px-4 py-2 rounded-lg text-gray-900 dark:text-white hover:bg-indigo-50 dark:hover:bg-gray-800 transition font-medium">
      <i class="fas fa-tags"></i>
      <span>Asset Types</span>
    </a>
    <a href="/references/brands" class="flex items-center gap-3 px-4 py-2 rounded-lg text-gray-900 dark:text-white hover:bg-indigo-50 dark:hover:bg-gray-800 transition font-medium">
      <i class="fas fa-trademark"></i>
      <span>Brands</span>
    </a>
    <a href="/references/statuses" class="flex items-center gap-3 px-4 py-2 rounded-lg text-gray-900 dark:text-white hover:bg-indigo-50 dark:hover:bg-gray-800 transition font-medium">
      <i class="fas fa-flag"></i>
      <span>Statuses</span>
    </a>
    <a href="/references/locations" class="flex items-center gap-3 px-4 py-2 rounded-lg text-gray-900 dark:text-white hover:bg-indigo-50 dark:hover:bg-gray-800 transition font-medium">
      <i class="fas fa-map-marker-alt"></i>
      <span>Locations</span>
    </a>
    <a href="/departments" class="flex items-center gap-3 px-4 py-2 rounded-lg text-gray-900 dark:text-white hover:bg-indigo-50 dark:hover:bg-gray-800 transition font-medium">
      <i class="fas fa-building"></i>
      <span>Departments</span>
    </a>
    <% } %>
  </nav>

  <div class="px-6 py-4 border-t border-gray-100 dark:border-gray-800 text-xs text-gray-400 dark:text-gray-500 text-center">
    v2.0.2
  </div>
</aside>
