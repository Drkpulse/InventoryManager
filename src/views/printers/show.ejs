<div class="min-h-screen bg-gray-50 dark:bg-gray-900 py-8 px-4">
  <div class="max-w-3xl mx-auto">
    <!-- Header -->
    <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4 mb-8">
      <div>
        <h1 class="text-2xl font-bold text-gray-800 dark:text-gray-100 flex items-center gap-2">
          <i class="fas fa-print"></i> Printer #<%= printer.id %>
        </h1>
        <p class="text-gray-600 dark:text-gray-300 mt-1">Printer Details</p>
      </div>
      <div class="flex gap-2">
        <a href="/printers" class="inline-flex items-center px-4 py-2 bg-gray-200 dark:bg-gray-700 hover:bg-gray-300 dark:hover:bg-gray-600 text-gray-800 dark:text-gray-100 rounded-md font-semibold transition">
          <i class="fas fa-arrow-left mr-2"></i> Back to Printers
        </a>
        <a href="/printers/<%= printer.id %>/edit" class="inline-flex items-center px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-md transition">
          <i class="fas fa-edit mr-2"></i> Edit Printer
        </a>
      </div>
    </div>

    <!-- Printer Info -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6 mb-8">
      <h3 class="text-lg font-semibold text-gray-700 dark:text-gray-200 mb-4 flex items-center gap-2">
        <i class="fas fa-info-circle"></i> Printer Information
      </h3>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <span class="block text-xs font-semibold text-gray-500 dark:text-gray-400 mb-1">ID</span>
          <span class="text-gray-800 dark:text-gray-100">#<%= printer.id %></span>
        </div>
        <div>
          <span class="block text-xs font-semibold text-gray-500 dark:text-gray-400 mb-1">Supplier</span>
          <span class="text-gray-800 dark:text-gray-100"><%= printer.supplier %></span>
        </div>
        <div>
          <span class="block text-xs font-semibold text-gray-500 dark:text-gray-400 mb-1">Model</span>
          <span class="text-gray-800 dark:text-gray-100"><%= printer.model || 'Not specified' %></span>
        </div>
        <div>
          <span class="block text-xs font-semibold text-gray-500 dark:text-gray-400 mb-1">Cost</span>
          <span class="text-gray-800 dark:text-gray-100">
            <% if (printer.cost) { %>
              â‚¬<%= parseFloat(printer.cost).toFixed(2) %>
            <% } else { %>
              <span class="text-gray-400 dark:text-gray-500 italic">Not specified</span>
            <% } %>
          </span>
        </div>
        <div>
          <span class="block text-xs font-semibold text-gray-500 dark:text-gray-400 mb-1">Status</span>
          <span>
            <% if (printer.status_name) { %>
              <span class="inline-block px-2 py-0.5 rounded bg-blue-100 dark:bg-blue-900 text-blue-700 dark:text-blue-200 text-xs font-semibold"><%= printer.status_name %></span>
            <% } else { %>
              <span class="text-gray-400 dark:text-gray-500 italic">No status</span>
            <% } %>
          </span>
        </div>
        <div>
          <span class="block text-xs font-semibold text-gray-500 dark:text-gray-400 mb-1">Client</span>
          <span>
            <% if (printer.client_name) { %>
              <a href="/clients/<%= printer.client_id %>" class="text-purple-700 dark:text-purple-300 hover:underline">
                <%= printer.client_name %> (<%= printer.client_code %>)
              </a>
            <% } else { %>
              <span class="text-gray-400 dark:text-gray-500 italic">No client assigned</span>
            <% } %>
          </span>
        </div>
        <div>
          <span class="block text-xs font-semibold text-gray-500 dark:text-gray-400 mb-1">Assigned Employee</span>
          <span>
            <% if (printer.employee_name) { %>
              <span class="text-gray-800 dark:text-gray-100"><%= printer.employee_name %></span>
            <% } else { %>
              <span class="text-gray-400 dark:text-gray-500 italic">Unassigned</span>
            <% } %>
          </span>
        </div>
        <div>
          <span class="block text-xs font-semibold text-gray-500 dark:text-gray-400 mb-1">Created</span>
          <span class="text-gray-800 dark:text-gray-100"><%= new Date(printer.created_at).toLocaleString() %></span>
        </div>
        <div>
          <span class="block text-xs font-semibold text-gray-500 dark:text-gray-400 mb-1">Last Updated</span>
          <span class="text-gray-800 dark:text-gray-100"><%= new Date(printer.updated_at).toLocaleString() %></span>
        </div>
      </div>
    </div>

    <!-- Actions -->
    <div class="flex flex-wrap gap-4 mb-8">
      <a href="/printers/<%= printer.id %>/history" class="inline-flex items-center px-4 py-2 bg-blue-100 dark:bg-blue-900 text-blue-700 dark:text-blue-200 font-semibold rounded-md transition hover:bg-blue-200 dark:hover:bg-blue-800">
        <i class="fas fa-history mr-2"></i> View History
      </a>
      <button class="inline-flex items-center px-4 py-2 bg-red-100 dark:bg-red-900 text-red-700 dark:text-red-200 font-semibold rounded-md transition hover:bg-red-200 dark:hover:bg-red-800"
        onclick="confirmDelete(<%= printer.id %>)">
        <i class="fas fa-trash mr-2"></i> Delete Printer
      </button>
    </div>
  </div>
</div>

<script>
function confirmDelete(printerId) {
  if (confirm('Are you sure you want to delete this printer? This action cannot be undone.')) {
    const form = document.createElement('form');
    form.method = 'POST';
    form.action = `/printers/${printerId}/delete`;
    document.body.appendChild(form);
    form.submit();
  }
}
</script>
