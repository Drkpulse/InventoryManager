<div class="container mx-auto px-4 py-8">
  <!-- Breadcrumb & Header -->
  <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4 mb-8">
    <div>
      <nav class="flex items-center text-sm text-gray-500 dark:text-gray-400 mb-2">
        <a href="/printers" class="hover:text-blue-600 dark:hover:text-blue-400 flex items-center gap-1">
          <i class="fas fa-print"></i> Printer Assets
        </a>
        <i class="fas fa-chevron-right mx-2"></i>
        <span class="text-gray-700 dark:text-gray-200"><%= printer.cep_brc %></span>
      </nav>
      <h1 class="text-2xl font-bold text-gray-800 dark:text-gray-100"><%= printer.name %></h1>
      <div class="flex items-center gap-4 mt-2 text-gray-700 dark:text-gray-300 text-sm">
        <span class="font-mono bg-gray-100 dark:bg-gray-900 px-2 py-0.5 rounded text-xs text-gray-600 dark:text-gray-400">ID: <%= printer.cep_brc %></span>
        <%
          // Get status information from database if available
          let statusClass = 'bg-gray-100 dark:bg-gray-900 text-gray-700 dark:text-gray-300';
          let statusIcon = 'fas fa-question-circle';
          let statusText = 'Unknown';
          let statusStyle = '';

          if (printer.status_name) {
            statusText = printer.status_name;

            // Check if we have status data with color/icon information
            if (typeof printer.status_color !== 'undefined' && printer.status_color) {
              // Handle RGB colors
              if (printer.status_color.startsWith('#')) {
                // Convert hex to RGB for opacity calculations
                const result = /^#?([a-f\d]{2})([a-f\d]{2})([a-f\d]{2})$/i.exec(printer.status_color);
                if (result) {
                  const r = parseInt(result[1], 16);
                  const g = parseInt(result[2], 16);
                  const b = parseInt(result[3], 16);
                  statusStyle = `background-color: rgba(${r}, ${g}, ${b}, 0.1); color: ${printer.status_color}; border: 1px solid rgba(${r}, ${g}, ${b}, 0.3);`;
                  statusClass = ''; // Clear default classes when using custom style
                }
              } else {
                // Fallback to named colors
                switch(printer.status_color) {
                  case 'green':
                    statusClass = 'bg-green-100 dark:bg-green-900 text-green-700 dark:text-green-300 border border-green-200 dark:border-green-700';
                    break;
                  case 'yellow':
                    statusClass = 'bg-yellow-100 dark:bg-yellow-900 text-yellow-700 dark:text-yellow-300 border border-yellow-200 dark:border-yellow-700';
                    break;
                  case 'red':
                    statusClass = 'bg-red-100 dark:bg-red-900 text-red-700 dark:text-red-300 border border-red-200 dark:border-red-700';
                    break;
                  case 'blue':
                    statusClass = 'bg-blue-100 dark:bg-blue-900 text-blue-700 dark:text-blue-300 border border-blue-200 dark:border-blue-700';
                    break;
                  case 'gray':
                    statusClass = 'bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 border border-gray-300 dark:border-gray-600';
                    break;
                  default:
                    statusClass = 'bg-purple-100 dark:bg-purple-900 text-purple-700 dark:text-purple-300 border border-purple-200 dark:border-purple-700';
                }
              }
            } else {
              // Fallback to pattern matching if no color is available
              const statusName = printer.status_name.toLowerCase();
              if (statusName.includes('active') || statusName.includes('operational') || statusName.includes('working')) {
                statusClass = 'bg-green-100 dark:bg-green-900 text-green-700 dark:text-green-300 border border-green-200 dark:border-green-700';
                statusIcon = 'fas fa-check-circle';
              } else if (statusName.includes('maintenance') || statusName.includes('repair') || statusName.includes('service')) {
                statusClass = 'bg-yellow-100 dark:bg-yellow-900 text-yellow-700 dark:text-yellow-300 border border-yellow-200 dark:border-yellow-700';
                statusIcon = 'fas fa-wrench';
              } else if (statusName.includes('retired') || statusName.includes('disposed') || statusName.includes('end')) {
                statusClass = 'bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 border border-gray-300 dark:border-gray-600';
                statusIcon = 'fas fa-archive';
              } else if (statusName.includes('lost') || statusName.includes('missing') || statusName.includes('stolen')) {
                statusClass = 'bg-red-100 dark:bg-red-900 text-red-700 dark:text-red-300 border border-red-200 dark:border-red-700';
                statusIcon = 'fas fa-times-circle';
              } else if (statusName.includes('storage') || statusName.includes('available') || statusName.includes('stock')) {
                statusClass = 'bg-blue-100 dark:bg-blue-900 text-blue-700 dark:text-blue-300 border border-blue-200 dark:border-blue-700';
                statusIcon = 'fas fa-box';
              }
            }

            // Use database icon if available
            if (typeof printer.status_icon !== 'undefined' && printer.status_icon) {
              statusIcon = printer.status_icon;
            }
          }
        %>
        <span class="inline-flex items-center gap-2 px-3 py-1 rounded-lg font-medium text-sm shadow <%= statusClass %>" <% if (statusStyle) { %>style="<%= statusStyle %>"<% } %>>
          <% if (statusIcon.startsWith('fas fa-')) { %>
            <i class="<%= statusIcon %>"></i>
          <% } else { %>
            <span class="text-base"><%= statusIcon %></span>
          <% } %>
          <%= statusText %>
        </span>
      </div>
    </div>
    <!-- Modern action buttons -->
    <div class="flex flex-wrap gap-3 mt-4 md:mt-0">
      <a href="/printers" class="group px-4 py-2 bg-gray-100 dark:bg-gray-700 hover:bg-gray-200 dark:hover:bg-gray-600 text-gray-800 dark:text-gray-100 font-semibold rounded-lg transition-all duration-300 hover:scale-105 hover:shadow-lg">
        <i class="fas fa-arrow-left mr-2 group-hover:-translate-x-1 transition-transform duration-300"></i> Back to Printers
      </a>
      <a href="/printers/<%= printer.id %>/edit" class="group px-4 py-2 bg-gradient-to-r from-yellow-500 to-orange-500 hover:from-yellow-600 hover:to-orange-600 text-white font-semibold rounded-lg transition-all duration-300 hover:scale-105 hover:shadow-lg">
        <i class="fas fa-edit mr-2 group-hover:rotate-12 transition-transform duration-300"></i> Edit Printer
      </a>
      <a href="/printers/<%= printer.id %>/history" class="group px-4 py-2 bg-gradient-to-r from-blue-500 to-blue-600 hover:from-blue-600 hover:to-blue-700 text-white font-semibold rounded-lg transition-all duration-300 hover:scale-105 hover:shadow-lg">
        <i class="fas fa-history mr-2 group-hover:scale-110 transition-transform duration-300"></i> History
      </a>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <!-- Main Information Panel -->
    <div class="lg:col-span-2 space-y-8">
      <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6">
        <h2 class="text-lg font-semibold text-gray-800 dark:text-gray-100 mb-4 flex items-center gap-2">
          <i class="fas fa-print"></i> Printer Information
        </h2>
        <dl class="grid grid-cols-1 md:grid-cols-2 gap-x-8 gap-y-4">
          <div>
            <dt class="font-semibold text-gray-700 dark:text-gray-200">Type</dt>
            <dd>
              <span class="inline-flex items-center gap-1 text-blue-700 dark:text-blue-300 font-medium">
                <i class="fas fa-print"></i> Printer
              </span>
            </dd>
          </div>
          <div>
            <dt class="font-semibold text-gray-700 dark:text-gray-200">Brand</dt>
            <dd>
              <% if (printer.brand) { %>
                <span class="inline-flex items-center gap-1 text-gray-700 dark:text-gray-200">
                  <i class="fas fa-building"></i> <%= printer.brand %>
                </span>
              <% } else { %>
                <span class="text-gray-400 italic">Not specified</span>
              <% } %>
            </dd>
          </div>
          <div>
            <dt class="font-semibold text-gray-700 dark:text-gray-200">Model</dt>
            <dd>
              <span class="text-gray-700 dark:text-gray-200"><%= printer.model || 'Not specified' %></span>
            </dd>
          </div>
          <div>
            <dt class="font-semibold text-gray-700 dark:text-gray-200">Serial Number</dt>
            <dd>
              <% if (printer.serial_cod) { %>
                <span class="font-mono bg-gray-100 dark:bg-gray-900 px-2 py-0.5 rounded text-gray-800 dark:text-gray-100"><%= printer.serial_cod %></span>
              <% } else { %>
                <span class="text-gray-400 italic">Not specified</span>
              <% } %>
            </dd>
          </div>
          <div>
            <dt class="font-semibold text-gray-700 dark:text-gray-200">Purchase Price</dt>
            <dd>
              <% if (printer.price || printer.cost) { %>
                <span class="text-green-700 dark:text-green-300 font-semibold">â‚¬<%= parseFloat(printer.price || printer.cost).toFixed(2) %></span>
              <% } else { %>
                <span class="text-gray-400 italic">Not specified</span>
              <% } %>
            </dd>
          </div>
          <div>
            <dt class="font-semibold text-gray-700 dark:text-gray-200">Date Acquired</dt>
            <dd>
              <% if (printer.date_acquired) { %>
                <span class="inline-flex items-center gap-1 text-gray-700 dark:text-gray-200">
                  <i class="fas fa-calendar"></i>
                  <%= new Date(printer.date_acquired).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %>
                </span>
              <% } else { %>
                <span class="text-gray-400 italic">Not specified</span>
              <% } %>
            </dd>
          </div>
        </dl>
        <% if (printer.description) { %>
        <div class="mt-8 bg-gray-50 dark:bg-gray-900 border-l-4 border-blue-600 dark:border-blue-400 rounded p-4">
          <h4 class="font-semibold text-gray-700 dark:text-gray-200 mb-2 flex items-center gap-2">
            <i class="fas fa-align-left"></i> Description
          </h4>
          <p class="text-gray-600 dark:text-gray-300 whitespace-pre-line"><%= printer.description %></p>
        </div>
        <% } %>
        <% if (printer.receipt || printer.supplier) { %>
        <div class="mt-8">
          <h2 class="text-lg font-semibold text-gray-800 dark:text-gray-100 mb-4 flex items-center gap-2">
            <i class="fas fa-receipt"></i> Purchase Details
          </h2>
          <dl class="grid grid-cols-1 md:grid-cols-2 gap-x-8 gap-y-4">
            <% if (printer.receipt) { %>
            <div>
              <dt class="font-semibold text-gray-700 dark:text-gray-200">Receipt Number</dt>
              <dd>
                <span class="font-mono bg-gray-100 dark:bg-gray-900 px-2 py-0.5 rounded text-gray-800 dark:text-gray-100"><%= printer.receipt %></span>
              </dd>
            </div>
            <% } %>
            <% if (printer.supplier) { %>
            <div>
              <dt class="font-semibold text-gray-700 dark:text-gray-200">Supplier</dt>
              <dd>
                <span class="text-gray-700 dark:text-gray-200"><%= printer.supplier %></span>
              </dd>
            </div>
            <% } %>
          </dl>
        </div>
        <% } %>
      </div>

      <!-- Warranty Information -->
      <% if (printer.warranty_start_date || printer.warranty_end_date) { %>
      <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6">
        <h2 class="text-lg font-semibold text-gray-800 dark:text-gray-100 mb-4 flex items-center gap-2">
          <i class="fas fa-shield-alt"></i> Warranty Information
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <% if (printer.warranty_start_date) { %>
          <div>
            <dt class="font-semibold text-gray-700 dark:text-gray-200">Warranty Start</dt>
            <dd>
              <span class="inline-flex items-center gap-1 text-gray-700 dark:text-gray-200">
                <i class="fas fa-calendar-plus"></i>
                <%= new Date(printer.warranty_start_date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %>
              </span>
            </dd>
          </div>
          <% } %>
          <% if (printer.warranty_months) { %>
          <div>
            <dt class="font-semibold text-gray-700 dark:text-gray-200">Warranty Period</dt>
            <dd>
              <span class="inline-flex items-center gap-1 text-gray-700 dark:text-gray-200">
                <i class="fas fa-clock"></i>
                <%= printer.warranty_months %> months
              </span>
            </dd>
          </div>
          <% } %>
          <% if (printer.warranty_end_date) { %>
          <div>
            <dt class="font-semibold text-gray-700 dark:text-gray-200">Warranty End</dt>
            <dd>
              <span class="inline-flex items-center gap-1 text-gray-700 dark:text-gray-200">
                <i class="fas fa-calendar-times"></i>
                <%= new Date(printer.warranty_end_date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %>
              </span>
            </dd>
          </div>
          <% } %>
        </div>

        <% if (printer.warranty_end_date) { %>
        <div class="mt-4">
          <%
            const warrantyEndDate = new Date(printer.warranty_end_date);
            const now = new Date();
            const diffTime = warrantyEndDate - now;
            const diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24));

            let warrantyStatusClass, warrantyStatusText, warrantyStatusIcon;

            if (diffDays < 0) {
              // Expired
              warrantyStatusClass = 'bg-red-100 dark:bg-red-900 text-red-800 dark:text-red-200 border border-red-200 dark:border-red-700';
              warrantyStatusIcon = 'fas fa-exclamation-circle text-red-600 dark:text-red-400';
              warrantyStatusText = `Warranty expired ${Math.abs(diffDays)} days ago`;
            } else if (diffDays <= 30) {
              // Expiring soon
              warrantyStatusClass = 'bg-yellow-100 dark:bg-yellow-900 text-yellow-800 dark:text-yellow-200 border border-yellow-200 dark:border-yellow-700';
              warrantyStatusIcon = 'fas fa-exclamation-triangle text-yellow-600 dark:text-yellow-400';
              warrantyStatusText = `Warranty expires in ${diffDays} days`;
            } else {
              // Active
              warrantyStatusClass = 'bg-green-100 dark:bg-green-900 text-green-800 dark:text-green-200 border border-green-200 dark:border-green-700';
              warrantyStatusIcon = 'fas fa-shield-alt text-green-600 dark:text-green-400';
              warrantyStatusText = `Warranty active for ${diffDays} more days`;
            }
          %>
          <div class="flex items-center gap-2 px-4 py-3 rounded-lg <%= warrantyStatusClass %>">
            <i class="<%= warrantyStatusIcon %>"></i>
            <span class="font-medium"><%= warrantyStatusText %></span>
          </div>
        </div>
        <% } %>
      </div>
      <% } %>
    </div>

    <!-- Client Assignment Panel -->
    <div class="space-y-8">
      <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6">
        <h2 class="text-lg font-semibold text-gray-800 dark:text-gray-100 mb-4 flex items-center gap-2">
          <i class="fas fa-building"></i> Client Assignment
        </h2>
        <div>
          <% if (printer.client_name) { %>
            <div class="flex items-center gap-4 mb-4">
              <a href="/clients/<%= printer.client_id %>" class="flex items-center gap-3 hover:underline">
                <div class="w-12 h-12 rounded-full bg-blue-100 dark:bg-blue-900 flex items-center justify-center text-blue-700 dark:text-blue-300 text-2xl">
                  <i class="fas fa-building"></i>
                </div>
                <div>
                  <div class="font-semibold text-gray-800 dark:text-gray-100"><%= printer.client_name %></div>
                  <% if (printer.client_pnumber) { %>
                    <div class="text-xs text-gray-500 dark:text-gray-400">#<%= printer.client_pnumber %></div>
                  <% } %>
                </div>
              </a>
            </div>
            <% if (printer.assignment_date) { %>
              <div class="mb-4 text-xs text-gray-500 dark:text-gray-400 flex items-center gap-2">
                <i class="fas fa-calendar-check"></i>
                Assigned on <%= new Date(printer.assignment_date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %>
              </div>
            <% } %>
            <button type="button" id="unassignBtn" class="w-full px-4 py-2 bg-yellow-500 hover:bg-yellow-600 text-white font-semibold rounded-md transition flex items-center justify-center gap-2">
              <i class="fas fa-minus"></i> Unassign from Client
            </button>
          <% } else { %>
            <div class="flex flex-col items-center justify-center mb-4">
              <div class="w-12 h-12 rounded-full bg-gray-200 dark:bg-gray-700 flex items-center justify-center text-gray-400 text-2xl mb-2">
                <i class="fas fa-building-slash"></i>
              </div>
              <div class="text-center">
                <h3 class="font-semibold text-gray-700 dark:text-gray-200">Not Assigned</h3>
                <p class="text-gray-500 dark:text-gray-400 text-sm">Available for client assignment</p>
              </div>
            </div>
            <a href="/printers/<%= printer.id %>/assign" class="w-full px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-md transition flex items-center justify-center gap-2">
              <i class="fas fa-plus"></i> Assign to Client
            </a>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Unassign Confirmation Modal -->
<% if (printer.client_name) { %>
<div id="unassignModal" class="fixed inset-0 z-50 flex items-center justify-center bg-black bg-opacity-50" style="display: none;">
  <div class="bg-white dark:bg-gray-800 rounded-lg shadow-xl max-w-md w-full mx-4">
    <div class="p-6">
      <div class="text-center mb-6">
        <i class="fas fa-exclamation-triangle text-yellow-500 text-3xl mb-4"></i>
        <h3 class="text-lg font-semibold text-gray-800 dark:text-gray-100 mb-2">Confirm Printer Unassignment</h3>
        <p class="text-gray-600 dark:text-gray-300">
          Are you sure you want to unassign <strong>"<%= printer.name %>"</strong> from <strong><%= printer.client_name %></strong>?
        </p>
      </div>

      <div class="bg-yellow-50 dark:bg-yellow-900/20 border border-yellow-200 dark:border-yellow-700 rounded-md p-4 mb-6">
        <div class="flex items-start gap-3">
          <i class="fas fa-info-circle text-yellow-600 dark:text-yellow-400 mt-0.5"></i>
          <div class="text-sm text-yellow-800 dark:text-yellow-200">
            <p class="font-medium mb-1">What happens when you unassign:</p>
            <ul class="list-disc list-inside space-y-1">
              <li>The printer will be marked as "Available"</li>
              <li>Client assignment will be cleared</li>
              <li>This action will be logged in printer history</li>
            </ul>
          </div>
        </div>
      </div>

      <div class="mb-6">
        <label for="unassignReason" class="block text-sm font-medium text-gray-700 dark:text-gray-200 mb-2">
          Reason for unassignment (optional)
        </label>
        <textarea
          id="unassignReason"
          rows="3"
          class="w-full px-3 py-2 border border-gray-300 dark:border-gray-700 rounded-md bg-gray-50 dark:bg-gray-900 text-gray-900 dark:text-gray-100 focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
          placeholder="Enter reason for unassignment..."
        ></textarea>
      </div>

      <div class="flex gap-3 justify-end">
        <button type="button" id="cancelUnassignBtn" class="px-4 py-2 bg-gray-300 dark:bg-gray-700 hover:bg-gray-400 dark:hover:bg-gray-600 text-gray-800 dark:text-gray-100 rounded-md transition">
          Cancel
        </button>
        <button type="button" id="confirmUnassignBtn" class="px-4 py-2 bg-yellow-500 hover:bg-yellow-600 text-white font-semibold rounded-md transition flex items-center gap-2">
          <i class="fas fa-minus"></i> Unassign Printer
        </button>
      </div>
    </div>
  </div>
</div>
<% } %>

<script>
function confirmDelete(printerName, printerId) {
  return confirm(`Are you sure you want to delete "${printerName}" (${printerId})? This action cannot be undone and will remove all history associated with this printer.`);
}

// Unassign modal functions
function openUnassignModal() {
  const modal = document.getElementById('unassignModal');
  if (modal) {
    modal.style.display = 'flex';
  } else {
    alert('Error: Unassign modal not found. Please refresh the page and try again.');
  }
}

function closeUnassignModal() {
  const modal = document.getElementById('unassignModal');
  if (modal) {
    modal.style.display = 'none';
    // Clear the reason field
    const reasonField = document.getElementById('unassignReason');
    if (reasonField) {
      reasonField.value = '';
    }
  }
}

function confirmUnassign() {
  const reasonField = document.getElementById('unassignReason');
  const reason = reasonField ? reasonField.value.trim() : '';
  const confirmBtn = document.getElementById('confirmUnassignBtn');

  if (!confirmBtn) {
    alert('Error: Could not find button element');
    return;
  }

  // Show loading state
  confirmBtn.disabled = true;
  confirmBtn.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i>Processing...';

  // Create form data
  const formData = new FormData();
  if (reason) {
    formData.append('reason', reason);
  }

  // Submit the unassign request
  // Get CSRF token
  const csrfToken = document.querySelector('meta[name="csrf-token"]');
  const headers = {
    'X-Requested-With': 'XMLHttpRequest'
  };

  // Add CSRF token to headers
  if (csrfToken) {
    headers['x-csrf-token'] = csrfToken.getAttribute('content');
  }

  fetch('/printers/<%= printer.id %>/unassign', {
    method: 'POST',
    headers: headers,
    body: formData
  })
  .then(response => {
    if (!response.ok) {
      throw new Error(`HTTP ${response.status}: ${response.statusText}`);
    }
    return response.json();
  })
  .then(data => {
    if (data.success) {
      // Show success message and reload page
      alert('Printer successfully unassigned!');
      window.location.reload();
    } else {
      throw new Error(data.error || 'Unknown error occurred');
    }
  })
  .catch(error => {
    console.error('Error unassigning printer:', error);
    alert('Failed to unassign printer: ' + error.message);

    // Reset button state
    confirmBtn.disabled = false;
    confirmBtn.innerHTML = '<i class="fas fa-minus"></i> Unassign Printer';
  });
}

// Setup modal event listeners when page loads
document.addEventListener('DOMContentLoaded', function() {
  // Unassign button event listener
  const unassignBtn = document.getElementById('unassignBtn');
  if (unassignBtn) {
    unassignBtn.addEventListener('click', openUnassignModal);
  }

  // Cancel button event listener
  const cancelBtn = document.getElementById('cancelUnassignBtn');
  if (cancelBtn) {
    cancelBtn.addEventListener('click', closeUnassignModal);
  }

  // Confirm button event listener
  const confirmBtn = document.getElementById('confirmUnassignBtn');
  if (confirmBtn) {
    confirmBtn.addEventListener('click', confirmUnassign);
  }

  // Modal background click to close
  const unassignModal = document.getElementById('unassignModal');
  if (unassignModal) {
    unassignModal.addEventListener('click', function(event) {
      if (event.target === this) {
        closeUnassignModal();
      }
    });
  }
});

function printPrinterLabel() {
  window.open('/printers/<%= printer.id %>/label', '_blank');
}
</script>
