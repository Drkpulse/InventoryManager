<div class="page-header">
  <h1>Add Brand</h1>
</div>

<% if (typeof errors !== 'undefined' && errors.length > 0) { %>
  <div class="alert alert-danger">
    <ul>
      <% errors.forEach(error => { %>
        <li><%= error %></li>
      <% }) %>
    </ul>
  </div>
<% } %>

<form method="POST" action="/references/brands">
  <div class="form-group">
    <label for="name">Brand Name</label>
    <input type="text" id="name" name="name" value="<%= typeof formData !== 'undefined' ? getFormValue("name") : '' %>" required>
    <small>Enter the brand name (e.g., Apple, Dell, HP, Lenovo)</small>
  </div>

  <div class="form-group">
    <button type="submit" class="btn">Add Brand</button>
    <a href="/references/brands" class="btn">Cancel</a>
  </div>
</form>

<link rel="stylesheet" href="/css/styles.css">
