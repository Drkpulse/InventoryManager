<div class="page-container">
  <div class="page-header-simple">
    <div class="header-title-section">
      <div class="breadcrumb-nav">
        <a href="/references" class="breadcrumb-link">
          <i class="fas fa-cog"></i> References
        </a>
        <i class="fas fa-chevron-right breadcrumb-separator"></i>
        <span class="breadcrumb-current">Brands</span>
      </div>
      <h1>Brands</h1>
      <div class="brands-meta">
        <span class="brands-count">
          <i class="fas fa-building"></i>
          <%= brands ? brands.length : 0 %> brands
        </span>
      </div>
    </div>
    <div class="header-actions">
      <div class="action-buttons">
        <a href="/references" class="btn btn-secondary">
          <i class="fas fa-arrow-left"></i> Back to References
        </a>
        <a href="/references/brands/add" class="btn btn-primary">
          <i class="fas fa-plus"></i> Add New Brand
        </a>
      </div>
    </div>
  </div>

  <div class="content-section">
    <% if (brands && brands.length > 0) { %>
      <div class="table-container">
        <table class="data-table">
          <thead>
            <tr>
              <th class="brand-name-col">
                <i class="fas fa-building"></i> Name
              </th>
              <th class="usage-col">
                <i class="fas fa-boxes"></i> Items Using
              </th>
              <th class="actions-col">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% brands.forEach(brand => { %>
              <tr class="table-row">
                <td class="brand-name-cell">
                  <div class="brand-info">
                    <div class="brand-name">
                      <strong><%= brand.name %></strong>
                    </div>
                  </div>
                </td>
                <td class="usage-cell">
                  <div class="usage-info">
                    <% if (parseInt(brand.item_count) > 0) { %>
                      <span class="usage-badge active">
                        <i class="fas fa-check-circle"></i>
                        <%= brand.item_count %> items
                      </span>
                    <% } else { %>
                      <span class="usage-badge unused">
                        <i class="fas fa-minus-circle"></i>
                        Not used
                      </span>
                    <% } %>
                  </div>
                </td>
                <td class="actions-cell">
                  <div class="action-buttons-inline">
                    <a href="/references/brands/<%= brand.id %>/edit"
                       class="btn-action btn-edit"
                       title="Edit Brand">
                      <i class="fas fa-edit"></i>
                    </a>
                    <% if (parseInt(brand.item_count) === 0) { %>
                      <form method="POST" action="/references/brands/<%= brand.id %>/delete"
                            class="inline-form"
                            onsubmit="return confirmDelete('<%= brand.name %>');">
                        <button type="submit" class="btn-action btn-delete" title="Delete Brand">
                          <i class="fas fa-trash"></i>
                        </button>
                      </form>
                    <% } else { %>
                      <button class="btn-action btn-delete" disabled
                              title="Cannot delete: this brand is in use by <%= brand.item_count %> items">
                        <i class="fas fa-trash"></i>
                      </button>
                    <% } %>
                  </div>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>

      <!-- Results Summary -->
      <div class="results-summary-bottom">
        <div class="results-stats">
          <span class="results-count">
            <i class="fas fa-building"></i>
            Showing <strong><%= brands.length %></strong> brands
          </span>
          <div class="stats-display">
            <%
              const usedBrands = brands.filter(b => parseInt(b.item_count) > 0).length;
              const unusedBrands = brands.length - usedBrands;
            %>
            <div class="stat-item">
              <span class="stat-number"><%= usedBrands %></span>
              <span class="stat-label">In Use</span>
            </div>
            <div class="stat-item">
              <span class="stat-number"><%= unusedBrands %></span>
              <span class="stat-label">Unused</span>
            </div>
          </div>
        </div>
      </div>

    <% } else { %>
      <div class="empty-state">
        <div class="empty-icon">
          <i class="fas fa-building"></i>
        </div>
        <h3>No Brands Found</h3>
        <p>Brands help categorize and organize your assets by manufacturer. Start by adding your first brand.</p>
        <div class="empty-actions">
          <a href="/references/brands/add" class="btn btn-primary">
            <i class="fas fa-plus"></i> Add First Brand
          </a>
          <a href="/references" class="btn btn-secondary">
            <i class="fas fa-cog"></i> Manage References
          </a>
        </div>
      </div>
    <% } %>
  </div>
</div>

<script>
function confirmDelete(brandName) {
  return confirm(`Are you sure you want to delete the brand "${brandName}"? This action cannot be undone.`);
}
</script>

