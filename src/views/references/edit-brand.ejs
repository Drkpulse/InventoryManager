<div class="page-header">
  <h1>Edit Brand</h1>
</div>

<% if (typeof errors !== 'undefined' && errors.length > 0) { %>
  <div class="alert alert-danger">
    <ul>
      <% errors.forEach(error => { %>
        <li><%= error %></li>
      <% }) %>
    </ul>
  </div>
<% } %>

<div class="card">
  <div class="card-body">
    <form method="POST" action="/references/brands/<%= brand.id %>">
      <div class="form-group">
        <label for="name">Brand Name</label>
        <input type="text" id="name" name="name" value="<%= brand.name %>" required>
        <small>Enter the brand name (e.g., Apple, Dell, HP, Lenovo)</small>
      </div>

      <div class="form-group">
        <button type="submit" class="btn">
          <i class="fas fa-save"></i> Update Brand
        </button>
        <a href="/references/brands" class="btn">
          <i class="fas fa-arrow-left"></i> Cancel
        </a>
      </div>
    </form>
  </div>
</div>

<link rel="stylesheet" href="/css/styles.css">
