<div class="page-container">
  <div class="page-header-simple">
    <div class="header-title-section">
      <div class="breadcrumb-nav">
        <a href="/references" class="breadcrumb-link">
          <i class="fas fa-cog"></i> References
        </a>
        <i class="fas fa-chevron-right breadcrumb-separator"></i>
        <span class="breadcrumb-current">Locations</span>
      </div>
      <h1>Locations</h1>
      <div class="locations-meta">
        <span class="locations-count">
          <i class="fas fa-map-marker-alt"></i>
          <%= locations ? locations.length : 0 %> locations
        </span>
      </div>
    </div>
    <div class="header-actions">
      <div class="action-buttons">
        <a href="/references" class="btn btn-secondary">
          <i class="fas fa-arrow-left"></i> Back to References
        </a>
        <a href="/references/locations/add" class="btn btn-primary">
          <i class="fas fa-plus"></i> Add New Location
        </a>
      </div>
    </div>
  </div>

  <div class="content-section">
    <% if (locations && locations.length > 0) { %>
      <div class="table-container">
        <table class="data-table">
          <thead>
            <tr>
              <th class="location-name-col">
                <i class="fas fa-map-marker-alt"></i> Name
              </th>
              <th class="address-col">
                <i class="fas fa-building"></i> Address
              </th>
              <th class="description-col">
                <i class="fas fa-info-circle"></i> Description
              </th>
              <th class="usage-col">
                <i class="fas fa-boxes"></i> Assets Located
              </th>
              <th class="actions-col">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% locations.forEach(location => { %>
              <tr class="table-row">
                <td class="location-name-cell">
                  <div class="location-info">
                    <div class="location-name">
                      <strong><%= location.name %></strong>
                    </div>
                    <% if (location.code) { %>
                      <div class="location-code">
                        Code: <%= location.code %>
                      </div>
                    <% } %>
                  </div>
                </td>
                <td class="address-cell">
                  <% if (location.address) { %>
                    <div class="address-text">
                      <i class="fas fa-map-pin"></i>
                      <%= location.address %>
                    </div>
                  <% } else { %>
                    <span class="text-muted">No address specified</span>
                  <% } %>
                </td>
                <td class="description-cell">
                  <% if (location.description) { %>
                    <span class="description-text"><%= location.description %></span>
                  <% } else { %>
                    <span class="text-muted">No description</span>
                  <% } %>
                </td>
                <td class="usage-cell">
                  <div class="usage-info">
                    <% if (parseInt(location.item_count) > 0) { %>
                      <span class="usage-badge active">
                        <i class="fas fa-check-circle"></i>
                        <%= location.item_count %> assets
                      </span>
                    <% } else { %>
                      <span class="usage-badge unused">
                        <i class="fas fa-minus-circle"></i>
                        Not used
                      </span>
                    <% } %>
                  </div>
                </td>
                <td class="actions-cell">
                  <div class="action-buttons-inline">
                    <a href="/references/locations/<%= location.id %>/edit"
                       class="btn-action btn-edit"
                       title="Edit Location">
                      <i class="fas fa-edit"></i>
                    </a>
                    <% if (parseInt(location.item_count) === 0) { %>
                      <form method="POST" action="/references/locations/<%= location.id %>/delete"
                            class="inline-form"
                            onsubmit="return confirmDelete('<%= location.name %>');">
                        <button type="submit" class="btn-action btn-delete" title="Delete Location">
                          <i class="fas fa-trash"></i>
                        </button>
                      </form>
                    <% } else { %>
                      <button class="btn-action btn-delete" disabled
                              title="Cannot delete: this location is in use by <%= location.item_count %> assets">
                        <i class="fas fa-trash"></i>
                      </button>
                    <% } %>
                  </div>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>

      <!-- Results Summary -->
      <div class="results-summary-bottom">
        <div class="results-stats">
          <span class="results-count">
            <i class="fas fa-map-marker-alt"></i>
            Showing <strong><%= locations.length %></strong> locations
          </span>
          <div class="stats-display">
            <%
              const usedLocations = locations.filter(l => parseInt(l.item_count) > 0).length;
              const unusedLocations = locations.length - usedLocations;
            %>
            <div class="stat-item">
              <span class="stat-number"><%= usedLocations %></span>
              <span class="stat-label">In Use</span>
            </div>
            <div class="stat-item">
              <span class="stat-number"><%= unusedLocations %></span>
              <span class="stat-label">Unused</span>
            </div>
          </div>
        </div>
      </div>

    <% } else { %>
      <div class="empty-state">
        <div class="empty-icon">
          <i class="fas fa-map-marker-alt"></i>
        </div>
        <h3>No Locations Found</h3>
        <p>Locations help organize and track where your assets are physically located. Start by adding your first location.</p>
        <div class="empty-actions">
          <a href="/references/locations/add" class="btn btn-primary">
            <i class="fas fa-plus"></i> Add First Location
          </a>
          <a href="/references" class="btn btn-secondary">
            <i class="fas fa-cog"></i> Manage References
          </a>
        </div>
      </div>
    <% } %>
  </div>
</div>

<script>
function confirmDelete(locationName) {
  return confirm(`Are you sure you want to delete the location "${locationName}"? This action cannot be undone.`);
}
</script>

<style>
