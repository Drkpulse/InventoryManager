<%- include('../partials/header', { title: 'Assets by Employee' }) %>

<div class="page-container">
  <div class="page-header-simple">
    <div class="header-title-section">
      <h1><i class="fas fa-users"></i> Assets by Employee</h1>
      <p class="text-muted">View asset assignments organized by employee</p>
    </div>
  </div>

  <div class="page-actions">
    <a href="/reports/export-assets-by-employee" class="btn btn-primary">
      <i class="fas fa-file-csv"></i> Export CSV
    </a>
    <a href="/reports" class="btn btn-secondary">
      <i class="fas fa-arrow-left"></i> Back to Reports
    </a>
  </div>

  <div class="card">
    <div class="card-header">
      <h3><i class="fas fa-users"></i> Employee Asset Assignments</h3>
    </div>
    <div class="card-body">
      <% if (employees && employees.length > 0) { %>
        <div class="table-container">
          <table class="data-table">
            <thead>
              <tr>
                <th>Employee Name</th>
                <th>Employee ID</th>
                <th>Department</th>
                <th>Total Items</th>
                <th>Total Value</th>
                <th>Asset Types</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% employees.forEach(emp => { %>
                <tr>
                  <td><%= emp.employee_name %></td>
                  <td><%= emp.employee_cep %></td>
                  <td><%= emp.department || 'N/A' %></td>
                  <td><%= emp.total_items || 0 %></td>
                  <td>$<%= emp.total_value ? parseFloat(emp.total_value).toFixed(2) : '0.00' %></td>
                  <td><%= emp.asset_types || 'N/A' %></td>
                  <td>
                    <div class="action-buttons">
                      <a href="/employees/<%= emp.employee_id %>" class="btn btn-sm btn-secondary" title="View Employee">
                        <i class="fas fa-eye"></i>
                      </a>
                      <a href="/reports/employee-assets/<%= emp.employee_id %>" class="btn btn-sm btn-primary" title="Asset Details">
                        <i class="fas fa-list"></i>
                      </a>
                      <a href="/reports/employee-full-assets/<%= emp.employee_id %>?format=pdf" class="btn btn-sm btn-danger" title="Export PDF">
                        <i class="fas fa-file-pdf"></i>
                      </a>
                    </div>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      <% } else { %>
        <div class="empty-state">
          <div class="empty-state-icon">
            <i class="fas fa-users"></i>
          </div>
          <h3>No Employee Asset Data</h3>
          <p>There are no employees with assigned assets to display.</p>
          <div class="empty-state-actions">
            <a href="/employees" class="btn btn-primary">
              <i class="fas fa-plus"></i> Add Employees
            </a>
            <a href="/items" class="btn btn-secondary">
              <i class="fas fa-boxes"></i> Manage Assets
            </a>
          </div>
        </div>
      <% } %>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
