<%- include('../partials/header', { title: 'Employee Asset Details' }) %>

<div class="page-container">
  <div class="page-header-simple">
    <div class="header-title-section">
      <h1><i class="fas fa-user"></i> Assets Assigned to <%= employee.name %></h1>
      <p class="text-muted">Detailed view of assets assigned to this employee</p>
    </div>
  </div>

  <div class="page-actions">
    <a href="/reports/employee-full-assets/<%= employee.id %>?format=pdf" class="btn btn-primary">
      <i class="fas fa-file-pdf"></i> Export PDF
    </a>
    <a href="/reports/assets-by-employee" class="btn btn-secondary">
      <i class="fas fa-arrow-left"></i> Back to Employee Assets
    </a>
    <a href="/reports" class="btn btn-secondary">
      <i class="fas fa-chart-bar"></i> All Reports
    </a>
  </div>

  <!-- Employee Information Card -->
  <div class="analytics-summary">
    <div class="summary-card primary">
      <div class="summary-icon">
        <i class="fas fa-user"></i>
      </div>
      <div class="summary-content">
        <h3><%= employee.name %></h3>
        <div class="summary-number"><%= employee.cep %></div>
        <div class="summary-detail">Employee ID</div>
      </div>
    </div>

    <div class="summary-card info">
      <div class="summary-icon">
        <i class="fas fa-building"></i>
      </div>
      <div class="summary-content">
        <h3>Department</h3>
        <div class="summary-number"><%= employee.department_name || 'N/A' %></div>
        <div class="summary-detail">Current assignment</div>
      </div>
    </div>

    <div class="summary-card success">
      <div class="summary-icon">
        <i class="fas fa-boxes"></i>
      </div>
      <div class="summary-content">
        <h3>Total Assets</h3>
        <div class="summary-number"><%= stats.total_items || 0 %></div>
        <div class="summary-detail">Assigned items</div>
      </div>
    </div>

    <div class="summary-card warning">
      <div class="summary-icon">
        <i class="fas fa-dollar-sign"></i>
      </div>
      <div class="summary-content">
        <h3>Total Value</h3>
        <div class="summary-number">$<%= stats.total_value ? parseFloat(stats.total_value).toFixed(2) : '0.00' %></div>
        <div class="summary-detail">Asset value</div>
      </div>
    </div>
  </div>

  <!-- Employee Details Card -->
  <div class="card">
    <div class="card-header">
      <h3><i class="fas fa-id-card"></i> Employee Information</h3>
    </div>
    <div class="card-body">
      <div class="info-grid">
        <div class="info-item">
          <label>Employee ID:</label>
          <span><%= employee.cep %></span>
        </div>
        <div class="info-item">
          <label>Email:</label>
          <span><%= employee.email || 'N/A' %></span>
        </div>
        <div class="info-item">
          <label>Department:</label>
          <span><%= employee.department_name || 'N/A' %></span>
        </div>
        <div class="info-item">
          <label>Location:</label>
          <span><%= employee.location_name || 'N/A' %></span>
        </div>
        <div class="info-item">
          <label>Join Date:</label>
          <span><%= employee.joined_date ? new Date(employee.joined_date).toLocaleDateString() : 'N/A' %></span>
        </div>
        <div class="info-item">
          <label>Asset Types:</label>
          <span><%= stats.asset_types || 'None' %></span>
        </div>
      </div>
    </div>
  </div>

  <!-- Assigned Assets Card -->
  <div class="card">
    <div class="card-header">
      <h3><i class="fas fa-list-ul"></i> Assigned Assets</h3>
    </div>
    <div class="card-body">
      <% if (items && items.length > 0) { %>
        <div class="table-container">
          <table class="data-table">
            <thead>
              <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Type</th>
                <th>Brand</th>
                <th>Model</th>
                <th>Price</th>
                <th>Date Assigned</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% items.forEach(item => { %>
                <tr>
                  <td><%= item.cep_brc %></td>
                  <td><%= item.name %></td>
                  <td><%= item.type_name || 'N/A' %></td>
                  <td><%= item.brand_name || 'N/A' %></td>
                  <td><%= item.model || 'N/A' %></td>
                  <td>$<%= item.price ? parseFloat(item.price).toFixed(2) : '0.00' %></td>
                  <td><%= item.date_assigned ? new Date(item.date_assigned).toLocaleDateString() : 'N/A' %></td>
                  <td>
                    <div class="action-buttons">
                      <a href="/items/<%= item.id %>/<%= item.cep_brc %>" class="btn btn-sm btn-primary" title="View Item">
                        <i class="fas fa-eye"></i>
                      </a>
                      <form style="display: inline;" method="POST" action="/items/<%= item.id %>/<%= item.cep_brc %>/unassign" data-confirm="Are you sure you want to unassign &quot;<%= item.name %>&quot; from <%= employee.name %>?&#10;&#10;This action cannot be undone.">
                        <button type="submit" class="btn btn-sm btn-danger" title="Unassign Item">
                          <i class="fas fa-minus-circle"></i>
                        </button>
                      </form>
                    </div>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      <% } else { %>
        <div class="empty-state">
          <div class="empty-state-icon">
            <i class="fas fa-boxes"></i>
          </div>
          <h3>No Assets Assigned</h3>
          <p>This employee currently has no assets assigned to them.</p>
          <div class="empty-state-actions">
            <a href="/items" class="btn btn-primary">
              <i class="fas fa-plus"></i> Assign Assets
            </a>
            <a href="/employees/<%= employee.id %>" class="btn btn-secondary">
              <i class="fas fa-user"></i> View Employee
            </a>
          </div>
        </div>
      <% } %>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
