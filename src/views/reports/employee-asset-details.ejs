<div class="container mx-auto px-4 py-8">
  <h1 class="text-2xl font-bold text-gray-800 dark:text-gray-100 mb-6 flex items-center gap-2">
    <i class="fas fa-user"></i> Assets Assigned to <%= employee.name %>
  </h1>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6">
      <h2 class="text-lg font-semibold text-gray-700 dark:text-gray-200 mb-4 flex items-center gap-2">
        <i class="fas fa-id-card"></i> Employee Info
      </h2>
      <div class="space-y-2">
        <p class="text-gray-700 dark:text-gray-200"><span class="font-semibold">Employee ID:</span> <%= employee.cep %></p>
        <p class="text-gray-700 dark:text-gray-200"><span class="font-semibold">Department:</span> <%= employee.department_name || 'N/A' %></p>
        <p class="text-gray-700 dark:text-gray-200"><span class="font-semibold">Platform:</span> <%= employee.platform_name || 'N/A' %></p>
        <p class="text-gray-700 dark:text-gray-200"><span class="font-semibold">Office:</span> <%= employee.office_name || 'N/A' %></p>
      </div>
    </div>
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6">
      <h2 class="text-lg font-semibold text-gray-700 dark:text-gray-200 mb-4 flex items-center gap-2">
        <i class="fas fa-chart-bar"></i> Asset Summary
      </h2>
      <div class="grid grid-cols-1 gap-3">
        <div>
          <span class="block text-xs font-semibold text-gray-500 dark:text-gray-400 mb-1">Total Items</span>
          <span class="text-xl font-bold text-gray-800 dark:text-gray-100"><%= stats.total_items || 0 %></span>
        </div>
        <div>
          <span class="block text-xs font-semibold text-gray-500 dark:text-gray-400 mb-1">Total Value</span>
          <span class="text-xl font-bold text-gray-800 dark:text-gray-100">$<%= stats.total_value ? parseFloat(stats.total_value).toFixed(2) : '0.00' %></span>
        </div>
        <div>
          <span class="block text-xs font-semibold text-gray-500 dark:text-gray-400 mb-1">Asset Types</span>
          <span class="text-xl font-bold text-gray-800 dark:text-gray-100"><%= stats.asset_types || 'None' %></span>
        </div>
      </div>
    </div>
  </div>

  <div class="flex flex-wrap gap-2 mb-8">
    <a href="/reports/assets-by-employee" class="inline-flex items-center px-4 py-2 bg-gray-300 dark:bg-gray-700 hover:bg-gray-400 dark:hover:bg-gray-600 text-gray-800 dark:text-gray-100 font-semibold rounded-lg shadow-md transition-all duration-200">
      <i class="fas fa-arrow-left mr-2"></i> Back to Report
    </a>
    <a href="/employees/<%= employee.id %>" class="inline-flex items-center px-4 py-2 bg-blue-600 dark:bg-blue-700 hover:bg-blue-700 dark:hover:bg-blue-600 text-white font-semibold rounded-lg shadow-md transition-all duration-200">
      <i class="fas fa-user-circle mr-2"></i> View Employee Profile
    </a>
  </div>

  <h2 class="text-lg font-semibold text-gray-700 dark:text-gray-200 mb-4 flex items-center gap-2">
    <i class="fas fa-list-ul"></i> Assigned Items
  </h2>

  <% if (items && items.length > 0) { %>
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50 dark:bg-gray-700">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">ID</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Name</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Type</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Brand</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Model</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Price</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Date Assigned</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200 dark:bg-gray-800 dark:divide-gray-700">
          <% items.forEach(item => { %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400"><%= item.cep_brc %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400"><%= item.name %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400"><%= item.type_name || 'N/A' %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400"><%= item.brand_name || 'N/A' %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400"><%= item.model || 'N/A' %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">$<%= item.price ? parseFloat(item.price).toFixed(2) : '0.00' %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400"><%= item.date_assigned ? new Date(item.date_assigned).toLocaleDateString() : 'N/A' %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                <a href="/items/<%= item.id %>/<%= item.cep_brc %>" class="text-blue-600 dark:text-blue-400 hover:underline">View</a>
                <a href="/items/<%= item.id %>/<%= item.cep_brc %>/unassign" class="text-red-600 dark:text-red-400 hover:underline ml-4">Unassign</a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  <% } else { %>
    <p class="text-gray-500 dark:text-gray-400">No items assigned to this employee.</p>
  <% } %>
</div>

<link rel="stylesheet" href="/css/styles.css">
