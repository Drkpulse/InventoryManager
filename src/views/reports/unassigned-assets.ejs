<h1>Unassigned Assets</h1>

<div class="report-actions">
  <a href="/reports/export-assets" class="btn">Export to CSV</a>
</div>

<% if (items && items.length > 0) { %>
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Type</th>
        <th>Brand</th>
        <th>Model</th>
        <th>Price</th>
        <th>Acquisition Date</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% items.forEach(item => { %>
        <tr>
          <td><%= item.cep_brc %></td>
          <td><%= item.name %></td>
          <td><%= item.type_name || 'N/A' %></td>
          <td><%= item.brand_name || 'N/A' %></td>
          <td><%= item.model || 'N/A' %></td>
          <td>$<%= item.price ? parseFloat(item.price).toFixed(2) : '0.00' %></td>
          <td><%= item.date_acquired ? new Date(item.date_acquired).toLocaleDateString() : 'N/A' %></td>
          <td>
            <a href="/items/<%= item.id %>/<%= item.cep_brc %>" class="btn">View</a>
            <a href="/items/<%= item.id %>/<%= item.cep_brc %>/assign" class="btn">Assign</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
<% } else { %>
  <p>No unassigned assets found.</p>
<% } %>
