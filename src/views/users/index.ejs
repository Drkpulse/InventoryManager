<h1>User Management</h1>

<% if (users && users.length > 0) { %>
  <table>
    <thead>
      <tr>
        <th><%= t("items.name") %></th>
        <th><%= t("employees.email") %></th>
        <th>Role</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% users.forEach(user => { %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.role %></td>
          <td>
            <a href="/users/<%= user.id %>/edit" class="btn"><%= t("common.edit") %></a>
            <form style="display: inline;" method="POST" action="/users/<%= user.id %>/delete">
              <button type="submit" class="btn btn-danger delete-btn"><%= t("common.delete") %></button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
<% } else { %>
  <p>No users found.</p>
<% } %>
