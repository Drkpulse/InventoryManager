<h1 class="text-2xl font-bold mb-6 text-gray-800 dark:text-gray-100">User Management</h1>

<% if (users && users.length > 0) { %>
  <div class="overflow-x-auto">
    <table class="min-w-full bg-white dark:bg-gray-800 rounded-lg shadow-md">
      <thead>
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 dark:text-gray-200 uppercase tracking-wider">CEP ID</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 dark:text-gray-200 uppercase tracking-wider">Name</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 dark:text-gray-200 uppercase tracking-wider">Email</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 dark:text-gray-200 uppercase tracking-wider">Role</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 dark:text-gray-200 uppercase tracking-wider">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% users.forEach(user => { %>
          <tr class="border-b border-gray-200 dark:border-gray-700">
            <td class="px-6 py-4 text-gray-900 dark:text-gray-100"><%= user.cepId %></td>
            <td class="px-6 py-4 text-gray-900 dark:text-gray-100"><%= user.name %></td>
            <td class="px-6 py-4 text-gray-900 dark:text-gray-100"><%= user.email %></td>
            <td class="px-6 py-4 text-gray-900 dark:text-gray-100 capitalize"><%= user.role %></td>
            <td class="px-6 py-4 flex gap-2">
              <a href="/users/<%= user.id %>/edit" class="px-4 py-1 bg-blue-600 hover:bg-blue-700 text-white rounded-md font-semibold transition">Edit</a>
              <form method="POST" action="/users/<%= user.id %>/delete" class="inline">
                <button type="submit" class="px-4 py-1 bg-red-600 hover:bg-red-700 text-white rounded-md font-semibold transition delete-btn">Delete</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
<% } else { %>
  <p class="text-gray-700 dark:text-gray-200">No users found.</p>
<% } %>
